@model Assignment_ASP.NET.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="max-w-5xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="text-slate-600 hover:text-indigo-600 text-sm">
            <i class="bi bi-arrow-left mr-2"></i>Quay lại
        </a>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 p-8 mb-6">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-slate-900">Đơn hàng #@Model.OrderID</h1>
                <p class="text-sm text-slate-600 mt-1">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
            <div class="flex space-x-2">
                <a asp-action="Edit" asp-route-id="@Model.OrderID" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm font-medium">
                    <i class="bi bi-pencil mr-1"></i>Cập nhật
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="p-5 bg-slate-50 rounded-xl border border-slate-200">
                <p class="text-xs text-slate-600 mb-1">Khách hàng</p>
                <p class="font-semibold text-slate-900">@Model.User?.FullName</p>
                <p class="text-xs text-slate-600 mt-1">@Model.User?.Email</p>
            </div>
            <div class="p-5 bg-slate-50 rounded-xl border border-slate-200">
                <p class="text-xs text-slate-600 mb-1">Địa chỉ giao hàng</p>
                <p class="text-sm text-slate-900">@Model.ShippingAddress</p>
            </div>
            <div class="p-5 bg-slate-50 rounded-xl border border-slate-200">
                <p class="text-xs text-slate-600 mb-1">Tổng tiền</p>
                <p class="text-2xl font-bold text-indigo-600">@Model.TotalAmount.ToString("N0")₫</p>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden">
        <div class="p-6 border-b border-slate-200">
            <h2 class="font-bold text-slate-900">Chi tiết sản phẩm</h2>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-50 border-b border-slate-200">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Sản phẩm</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Giá</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Số lượng</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase">Thành tiền</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100">
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td class="px-6 py-4">
                                <span class="font-semibold text-slate-900">@detail.Product?.ProductName</span>
                            </td>
                            <td class="px-6 py-4 text-slate-700">@detail.Price.ToString("N0")₫</td>
                            <td class="px-6 py-4 text-slate-700">@detail.Quantity</td>
                            <td class="px-6 py-4 font-semibold text-slate-900">@(detail.Price * detail.Quantity).ToString("N0")₫</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>