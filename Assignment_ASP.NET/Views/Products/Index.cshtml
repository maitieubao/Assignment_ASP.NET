@model IEnumerable<Assignment_ASP.NET.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<!-- Page Header -->
<div class="mb-8">
    <div class="flex items-center justify-between">
        <div>
<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Tổng sản phẩm</p>
                <p class="text-3xl font-bold text-gray-800">@Model.Count()</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-box-seam text-blue-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Còn hàng</p>
                <p class="text-3xl font-bold text-green-600">@Model.Count(p => p.StockQuantity > 0)</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-check-circle text-green-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Hết hàng</p>
                <p class="text-3xl font-bold text-red-600">@Model.Count(p => p.StockQuantity == 0)</p>
            </div>
            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-x-circle text-red-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Tổng giá trị</p>
                <p class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                    @Model.Sum(p => p.Price * p.StockQuantity).ToString("N0")₫
                </p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-cash-stack text-purple-600 text-xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Products Table -->
<div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
    
    <!-- Table Header with Search -->
    <div class="p-6 border-b border-gray-100">
        <div class="flex items-center justify-between">
            <h2 class="text-lg font-bold text-gray-800">Danh sách sản phẩm</h2>
            <div class="flex items-center space-x-4">
                <div class="relative">
                    <input type="search" 
                           placeholder="Tìm kiếm sản phẩm..." 
                           class="pl-10 pr-4 py-2 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 focus:bg-white w-64">
                    <i class="bi bi-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>
                <select class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-xl focus:outline-none focus:border-blue-500">
                    <option>Tất cả danh mục</option>
                    <option>Điện thoại</option>
                    <option>Laptop</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-100">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Hình ảnh</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Tên sản phẩm</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Danh mục</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Giá</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Kho</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Trạng thái</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Hành động</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4">
                            <img src="@(item.ImageUrl ?? "/images/placeholder.jpg")" 
                                 alt="@item.ProductName" 
                                 class="w-16 h-16 object-cover rounded-xl"/>
                        </td>
                        <td class="px-6 py-4">
                            <div class="font-semibold text-gray-800">@item.ProductName</div>
                            <div class="text-sm text-gray-500">ID: @item.ProductID</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
                                @item.Category?.CategoryName
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="font-bold text-gray-800">@item.Price.ToString("N0")₫</span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="@(item.StockQuantity > 10 ? "text-green-600" : item.StockQuantity > 0 ? "text-orange-600" : "text-red-600") font-semibold">
                                @item.StockQuantity
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            @if (item.StockQuantity > 10)
                            {
                                <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-bold">
                                    <i class="bi bi-check-circle-fill mr-1"></i>Còn hàng
                                </span>
                            }
                            else if (item.StockQuantity > 0)
                            {
                                <span class="px-3 py-1 bg-orange-100 text-orange-700 rounded-full text-xs font-bold">
                                    <i class="bi bi-exclamation-triangle-fill mr-1"></i>Sắp hết
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-xs font-bold">
                                    <i class="bi bi-x-circle-fill mr-1"></i>Hết hàng
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center justify-end space-x-2">
                                <a asp-action="Details" asp-route-id="@item.ProductID" 
                                   class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" 
                                   title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ProductID" 
                                   class="p-2 text-green-600 hover:bg-green-50 rounded-lg transition-colors" 
                                   title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductID" 
                                   class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors" 
                                   title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="px-6 py-4 border-t border-gray-100 flex items-center justify-between">
        <div class="text-sm text-gray-600">
            Hiển thị <span class="font-semibold">@Model.Count()</span> sản phẩm
        </div>
        <div class="flex space-x-2">
            <button class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 disabled:opacity-50" disabled>
                <i class="bi bi-chevron-left"></i>
            </button>
            <button class="px-4 py-2 bg-blue-600 text-white rounded-lg font-medium">1</button>
            <button class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50">2</button>
            <button class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50">3</button>
            <button class="px-4 py-2 bg-white border border-gray-200 rounded-lg hover:bg-gray-50">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>
    </div>
</div>