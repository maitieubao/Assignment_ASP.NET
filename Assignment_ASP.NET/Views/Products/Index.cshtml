@model IEnumerable<Assignment_ASP.NET.Models.Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    var categories = ViewBag.Categories as List<Assignment_ASP.NET.Models.Category>;
}

<!-- Page Header -->
<div class="mb-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-slate-900">Quản lý sản phẩm</h1>
            <p class="text-slate-600 mt-1">Quản lý danh sách sản phẩm trong hệ thống</p>
        </div>
        <a asp-action="Create" class="px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors flex items-center gap-2">
            <i class="bi bi-plus-circle"></i>
            Thêm sản phẩm mới
        </a>
    </div>
</div>

<!-- Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="mb-6 bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-center">
        <i class="bi bi-check-circle mr-2"></i>
        @TempData["SuccessMessage"]
    </div>
}

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-lg p-4 border border-slate-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-600">Tổng sản phẩm</p>
                <p class="text-2xl font-bold text-slate-900">@Model.Count()</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-box-seam text-blue-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-slate-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-600">Còn hàng</p>
                <p class="text-2xl font-bold text-green-600">@Model.Count(p => p.StockQuantity > 0)</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-check-circle text-green-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-slate-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-600">Hết hàng</p>
                <p class="text-2xl font-bold text-red-600">@Model.Count(p => p.StockQuantity == 0)</p>
            </div>
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-x-circle text-red-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-lg p-4 border border-slate-200">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-600">Tổng giá trị</p>
                <p class="text-xl font-bold text-indigo-600">@Model.Sum(p => p.Price * p.StockQuantity).ToString("N0")₫</p>
            </div>
            <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
                <i class="bi bi-cash-stack text-indigo-600 text-xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter -->
<div class="bg-white rounded-lg border border-slate-200 p-6 mb-6">
    <form asp-action="Index" method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Search -->
        <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Tìm kiếm</label>
            <input type="text" name="searchString" value="@ViewBag.CurrentSearch" 
                   placeholder="Tên hoặc mô tả sản phẩm..." 
                   class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
        </div>

        <!-- Category Filter -->
        <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Danh mục</label>
            <select name="categoryId" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                <option value="">Tất cả danh mục</option>
                @if (categories != null)
                {
                    foreach (var cat in categories)
                    {
                        <option value="@cat.CategoryID" selected="@(ViewBag.CurrentCategory == cat.CategoryID)">@cat.CategoryName</option>
                    }
                }
            </select>
        </div>

        <!-- Buttons -->
        <div class="flex items-end gap-2">
            <button type="submit" class="flex-1 px-6 py-2 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition-colors">
                <i class="bi bi-search mr-1"></i> Tìm kiếm
            </button>
            <a asp-action="Index" class="px-6 py-2 bg-slate-100 text-slate-700 font-medium rounded-lg hover:bg-slate-200 transition-colors">
                <i class="bi bi-arrow-clockwise"></i>
            </a>
        </div>
    </form>
</div>

<!-- Products Table -->
<div class="bg-white rounded-lg border border-slate-200 overflow-hidden">
    @if (!Model.Any())
    {
        <div class="p-12 text-center">
            <i class="bi bi-inbox text-slate-400 text-5xl mb-4"></i>
            <p class="text-slate-600 text-lg">Không tìm thấy sản phẩm nào</p>
        </div>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-50 border-b border-slate-200">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Sản phẩm</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Danh mục</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Giá</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Tồn kho</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200">
                    @foreach (var product in Model)
                    {
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" 
                                         alt="@product.ProductName" 
                                         class="w-12 h-12 rounded-lg object-cover mr-3">
                                    <div>
                                        <div class="font-medium text-slate-900">@product.ProductName</div>
                                        <div class="text-sm text-slate-500">@product.Color @product.Size</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 text-xs font-medium bg-indigo-100 text-indigo-800 rounded">
                                    @product.Category?.CategoryName
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="font-semibold text-slate-900">@product.Price.ToString("N0")₫</span>
                            </td>
                            <td class="px-6 py-4">
                                @if (product.StockQuantity > 10)
                                {
                                    <span class="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded">@product.StockQuantity</span>
                                }
                                else if (product.StockQuantity > 0)
                                {
                                    <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded">@product.StockQuantity</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded">Hết hàng</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <a asp-action="Details" asp-route-id="@product.ProductID" 
                                       class="text-blue-600 hover:text-blue-800" title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@product.ProductID" 
                                       class="text-indigo-600 hover:text-indigo-800" title="Chỉnh sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.ProductID" 
                                       class="text-red-600 hover:text-red-800" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="px-6 py-4 border-t border-slate-200 flex items-center justify-between">
                <div class="text-sm text-slate-600">
                    Trang @ViewBag.CurrentPage / @ViewBag.TotalPages
                </div>
                <div class="flex items-center gap-2">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <a asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage - 1)" 
                           asp-route-searchString="@ViewBag.CurrentSearch" 
                           asp-route-categoryId="@ViewBag.CurrentCategory"
                           class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors">
                            <i class="bi bi-chevron-left"></i> Trước
                        </a>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        if (i == ViewBag.CurrentPage)
                        {
                            <span class="px-4 py-2 bg-indigo-600 text-white rounded-lg font-medium">@i</span>
                        }
                        else if (Math.Abs(i - ViewBag.CurrentPage) <= 2 || i == 1 || i == ViewBag.TotalPages)
                        {
                            <a asp-action="Index" 
                               asp-route-page="@i" 
                               asp-route-searchString="@ViewBag.CurrentSearch" 
                               asp-route-categoryId="@ViewBag.CurrentCategory"
                               class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors">@i</a>
                        }
                        else if (Math.Abs(i - ViewBag.CurrentPage) == 3)
                        {
                            <span class="px-2 py-2 text-slate-400">...</span>
                        }
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <a asp-action="Index" 
                           asp-route-page="@(ViewBag.CurrentPage + 1)" 
                           asp-route-searchString="@ViewBag.CurrentSearch" 
                           asp-route-categoryId="@ViewBag.CurrentCategory"
                           class="px-4 py-2 bg-slate-100 text-slate-700 rounded-lg hover:bg-slate-200 transition-colors">
                            Sau <i class="bi bi-chevron-right"></i>
                        </a>
                    }
                </div>
            </div>
        }
    }
</div>