@model Assignment_ASP.NET.Models.Product
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
}

<div class="max-w-4xl mx-auto">
    
    <!-- Back Button -->
    <div class="mb-6">
        <a asp-action="Index" class="inline-flex items-center text-gray-600 hover:text-gray-800 font-medium">
            <i class="bi bi-arrow-left mr-2"></i>
            Quay lại danh sách
        </a>
    </div>

    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
            <i class="bi bi-plus-circle text-blue-600 mr-2"></i>
            Thêm sản phẩm mới
        </h1>
        <p class="text-gray-600">Điền thông tin sản phẩm bên dưới</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl text-red-600 text-sm"></div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl text-red-600 text-sm">
                    <i class="bi bi-exclamation-triangle mr-2"></i>
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                
                <!-- Product Name -->
                <div class="md:col-span-2">
                    <label asp-for="ProductName" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="bi bi-tag text-blue-600 mr-1"></i>
                        Tên sản phẩm <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="ProductName" 
                           class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 focus:bg-white transition-all"
                           placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="ProductName" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Price -->
                <div>
                    <label asp-for="Price" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="bi bi-currency-dollar text-green-600 mr-1"></i>
                        Giá <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Price" type="number" step="1000"
                           class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 focus:bg-white transition-all"
                           placeholder="0" />
                    <span asp-validation-for="Price" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Stock Quantity -->
                <div>
                    <label asp-for="StockQuantity" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="bi bi-box text-purple-600 mr-1"></i>
                        Số lượng kho <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="StockQuantity" type="number"
                           class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 focus:bg-white transition-all"
                           placeholder="0" />
                    <span asp-validation-for="StockQuantity" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Category -->
                <div>
                    <label asp-for="CategoryID" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="bi bi-grid text-orange-600 mr-1"></i>
                        Danh mục <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="CategoryID" asp-items="ViewBag.CategoryID"
                            class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 focus:bg-white transition-all">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Image Upload -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="bi bi-image text-pink-600 mr-1"></i>
                        Hình ảnh
                    </label>
                    <div class="relative">
                        <input type="file" name="imageFile" accept="image/*"
                               class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
                    </div>
                </div>

                <!-- Description -->
                <div class="md:col-span-2">
                    <label asp-for="Description" class="block text-sm font-semibold text-gray-700 mb-2">
                        <i class="bi bi-card-text text-gray-600 mr-1"></i>
                        Mô tả sản phẩm
                    </label>
                    <textarea asp-for="Description" rows="4"
                              class="w-full px-4 py-3 bg-gray-50 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-blue-500 focus:bg-white transition-all resize-none"
                              placeholder="Nhập mô tả chi tiết về sản phẩm..."></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-xs mt-1"></span>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
                <a asp-action="Index" class="px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-xl hover:bg-gray-200 transition-all">
                    Hủy bỏ
                </a>
                <button type="submit" class="px-8 py-3 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 transition-all shadow-lg shadow-blue-200">
                    <i class="bi bi-check-lg mr-2"></i>
                    Tạo sản phẩm
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}