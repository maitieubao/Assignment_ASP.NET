@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
}

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="max-w-md w-full text-center">
        
        <div class="relative mb-8">
            <div class="w-24 h-24 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-exclamation-triangle text-red-600 text-5xl"></i>
            </div>
        </div>

        <h1 class="text-3xl font-bold text-slate-900 mb-4">Đã xảy ra lỗi!</h1>
        <p class="text-lg text-slate-600 mb-8">
            Xin lỗi, đã có lỗi xảy ra khi xử lý yêu cầu của bạn.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="mb-8 p-4 bg-slate-50 rounded-lg border border-slate-200">
                <p class="text-sm text-slate-600">
                    Request ID: <code class="text-slate-900 font-mono">@Model.RequestId</code>
                </p>
            </div>
        }

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a asp-controller="Home" asp-action="Index" 
               class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">
                <i class="bi bi-house mr-2"></i>
                Về trang chủ
            </a>
            <a href="javascript:history.back()" 
               class="px-8 py-3 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200">
                <i class="bi bi-arrow-left mr-2"></i>
                Quay lại
            </a>
        </div>

        <div class="mt-12 p-6 bg-slate-50 rounded-xl border border-slate-200">
            <h3 class="font-bold text-slate-900 mb-2 text-sm">Cần hỗ trợ?</h3>
            <p class="text-sm text-slate-600 mb-4">Liên hệ với chúng tôi</p>
            <div class="flex justify-center gap-6 text-sm">
                <a href="tel:18006909" class="text-indigo-600 hover:text-indigo-700 font-medium">
                    <i class="bi bi-telephone mr-1"></i>
                    1800 6909
                </a>
                <a href="mailto:support@shop.vn" class="text-indigo-600 hover:text-indigo-700 font-medium">
                    <i class="bi bi-envelope mr-1"></i>
                    Email
                </a>
            </div>
        </div>
    </div>
</div>
