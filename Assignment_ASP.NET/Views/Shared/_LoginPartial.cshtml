@if (User.Identity.IsAuthenticated)
{
    <div class="flex items-center space-x-3">
        <div class="hidden md:block text-right">
            <p class="text-sm font-semibold text-slate-900">@User.Identity.Name</p>
            <p class="text-xs text-slate-500">@(User.IsInRole("Admin") ? "Quản trị" : User.IsInRole("Employee") ? "Nhân viên" : "Khách hàng")</p>
        </div>
        
        <div class="relative group">
            <button class="w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center text-white font-semibold text-sm hover:bg-indigo-700">
                @User.Identity.Name.Substring(0, 1).ToUpper()
            </button>
            
            <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible z-50 border border-slate-200">
                <div class="py-1.5">
                    <a asp-controller="Account" asp-action="Profile" class="flex items-center px-4 py-2.5 text-sm text-slate-700 hover:bg-slate-50">
                        <i class="bi bi-person mr-2.5 text-slate-400"></i>
                        Thông tin cá nhân
                    </a>
                    <div class="border-t border-slate-100 my-1"></div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="flex items-center w-full px-4 py-2.5 text-sm text-red-600 hover:bg-red-50">
                            <i class="bi bi-box-arrow-right mr-2.5"></i>
                            Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="flex items-center space-x-3">
        <a asp-controller="Account" asp-action="Login" 
           class="px-5 py-2 text-sm font-medium text-slate-700 hover:text-indigo-600">
            Đăng nhập
        </a>
        <a asp-controller="Account" asp-action="Register" 
           class="px-5 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700">
            Đăng ký
        </a>
    </div>
}