<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Bán Hàng</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body { font-family: 'Inter', sans-serif; }
        
        /* Removed all transform/scale effects as requested */
        .card-hover:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        }
    </style>
</head>

<body class="flex flex-col min-h-screen bg-white">
    
    <!-- Minimal Top Bar -->
    <div class="bg-slate-50 border-b border-slate-100 py-2">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center text-xs text-slate-600">
                <div class="flex items-center space-x-4">
                    <a href="tel:18006909" class="hover:text-indigo-600 flex items-center">
                        <i class="bi bi-telephone mr-1"></i>
                        <span class="hidden md:inline">1800 6909</span>
                    </a>
                    <a href="#" class="hidden lg:inline hover:text-indigo-600">
                        <i class="bi bi-geo-alt mr-1"></i>
                        Cửa hàng
                    </a>
                </div>
                <div>
                    <a href="#" class="hover:text-indigo-600 hidden md:inline">Hỗ trợ</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Clean White Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50 border-b border-slate-100">
        <div class="container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                
                <!-- Logo -->
                <a asp-controller="Home" asp-action="Index" class="flex items-center space-x-3 group">
                    <div class="w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center group-hover:bg-indigo-700">
                        <i class="bi bi-shop text-white text-lg"></i>
                    </div>
                    <div class="hidden md:block">
                        <h1 class="text-lg font-bold text-slate-900">Web Bán Hàng</h1>
                        <p class="text-xs text-slate-500">Chất lượng - Uy tín</p>
                    </div>
                </a>

                <!-- Search -->
                <form asp-controller="Home" asp-action="Index" method="get" class="hidden lg:flex flex-1 max-w-xl mx-8">
                    <div class="relative w-full">
                        <input 
                            type="search" 
                            name="searchString" 
                            placeholder="Tìm kiếm sản phẩm..."
                            class="w-full px-5 py-2.5 pl-11 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-400 focus:bg-white text-sm"
                        />
                        <i class="bi bi-search absolute left-3.5 top-1/2 transform -translate-y-1/2 text-slate-400 text-sm"></i>
                        <button type="submit" class="absolute right-1.5 top-1/2 transform -translate-y-1/2 bg-indigo-600 text-white px-5 py-1.5 rounded-md hover:bg-indigo-700 text-sm">
                            Tìm
                        </button>
                    </div>
                </form>

                <!-- Right Menu -->
                <div class="flex items-center space-x-4">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                    {
                        <a asp-controller="Cart" asp-action="Index" class="relative">
                            <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center hover:bg-slate-200">
                                <i class="bi bi-cart text-slate-700 text-lg"></i>
                            </div>
                            <span class="absolute -top-1.5 -right-1.5 bg-indigo-600 text-white text-xs font-bold rounded-full w-5 h-5 flex items-center justify-center">@await Component.InvokeAsync("CartCount")</span>
                        </a>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="bg-white border-t border-slate-100">
            <div class="container mx-auto px-4">
                <ul class="flex items-center space-x-6 py-2.5">
                    <li>
                        <a asp-controller="Home" asp-action="Index" 
                           class="text-sm text-slate-700 hover:text-indigo-600 font-medium flex items-center space-x-1.5">
                            <i class="bi bi-house-door text-sm"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Customer"))
                        {
                            <li>
                                <a asp-controller="Account" asp-action="OrderHistory" 
                                   class="text-sm text-slate-700 hover:text-indigo-600 font-medium flex items-center space-x-1.5">
                                    <i class="bi bi-clock-history text-sm"></i>
                                    <span>Lịch sử mua</span>
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                        {
                            <li>
                                <a asp-controller="Products" asp-action="Index" 
                                   class="text-sm text-slate-700 hover:text-indigo-600 font-medium flex items-center space-x-1.5">
                                    <i class="bi bi-box-seam text-sm"></i>
                                    <span>Sản phẩm</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Categories" asp-action="Index" 
                                   class="text-sm text-slate-700 hover:text-indigo-600 font-medium flex items-center space-x-1.5">
                                    <i class="bi bi-tags text-sm"></i>
                                    <span>Danh mục</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Orders" asp-action="Index" 
                                   class="text-sm text-slate-700 hover:text-indigo-600 font-medium flex items-center space-x-1.5">
                                    <i class="bi bi-receipt text-sm"></i>
                                    <span>Đơn hàng</span>
                                </a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a asp-controller="Users" asp-action="Index" 
                                       class="text-sm text-slate-700 hover:text-indigo-600 font-medium flex items-center space-x-1.5">
                                        <i class="bi bi-people text-sm"></i>
                                        <span>Người dùng</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-controller="Roles" asp-action="Index" 
                                       class="text-sm text-slate-700 hover:text-indigo-600 font-medium flex items-center space-x-1.5">
                                        <i class="bi bi-shield-lock text-sm"></i>
                                        <span>Vai trò</span>
                                    </a>
                                </li>
                            }
                        }
                    }
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 py-8 bg-slate-50">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-slate-900 text-white mt-auto">
        <div class="container mx-auto px-4 py-10">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-sm">
                
                <div>
                    <div class="flex items-center space-x-2 mb-4">
                        <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center">
                            <i class="bi bi-shop text-white"></i>
                        </div>
                        <h3 class="font-bold">Web Bán Hàng</h3>
                    </div>
                    <p class="text-slate-400 text-xs">Chất lượng - Uy tín - Giá tốt</p>
                </div>

                <div>
                    <h3 class="font-semibold mb-3">Liên kết</h3>
                    <ul class="space-y-2 text-xs">
                        <li><a asp-controller="Home" asp-action="Index" class="text-slate-400 hover:text-white">Trang chủ</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-slate-400 hover:text-white">Chính sách</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="font-semibold mb-3">Liên hệ</h3>
                    <ul class="space-y-2 text-xs text-slate-400">
                        <li><i class="bi bi-telephone mr-2"></i>1800 6909</li>
                        <li><i class="bi bi-envelope mr-2"></i>support@shop.vn</li>
                    </ul>
                </div>

                <div>
                    <h3 class="font-semibold mb-3">Theo dõi</h3>
                    <div class="flex space-x-2">
                        <a href="#" class="w-8 h-8 bg-slate-800 rounded-lg flex items-center justify-center hover:bg-indigo-600 text-sm">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="w-8 h-8 bg-slate-800 rounded-lg flex items-center justify-center hover:bg-indigo-600 text-sm">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="border-t border-slate-800 mt-8 pt-6 text-center text-slate-500 text-xs">
                © 2025 Web Bán Hàng
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>