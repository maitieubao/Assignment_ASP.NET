@model Assignment_ASP.NET.Models.User

@{
    ViewData["Title"] = "Thanh toán";
    var cartItems = ViewBag.CartItems as List<Assignment_ASP.NET.Models.CartItem>;
    var totalAmount = (decimal)ViewBag.TotalAmount;
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8 text-gray-800">Thanh toán đơn hàng</h1>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Thông tin đơn hàng -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <h2 class="text-xl font-semibold mb-4 text-gray-800">Thông tin giao hàng</h2>
                
                <form asp-action="PlaceOrder" method="post" id="checkoutForm">
                    @Html.AntiForgeryToken()
                    
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Họ tên</label>
                            <input type="text" value="@Model.FullName" readonly 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Số điện thoại</label>
                            <input type="text" value="@Model.Phone" readonly 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50">
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                            <input type="text" value="@Model.Email" readonly 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50">
                        </div>

                        <div>
                            <label for="shippingAddress" class="block text-sm font-medium text-gray-700 mb-2">
                                Địa chỉ giao hàng <span class="text-red-500">*</span>
                            </label>
                            <textarea id="shippingAddress" name="shippingAddress" rows="3" required
                                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">@Model.Address</textarea>
                        </div>
                    </div>

                    <div class="mt-6">
                        <h3 class="text-lg font-semibold mb-4 text-gray-800">Phương thức thanh toán</h3>
                        
                        <div class="space-y-3">
                            <!-- COD -->
                            <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                                <input type="radio" name="paymentMethod" value="COD" class="w-5 h-5 text-blue-600" required>
                                <div class="ml-4 flex-1">
                                    <div class="flex items-center">
                                        <svg class="w-6 h-6 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                        </svg>
                                        <span class="font-medium text-gray-900">Thanh toán khi nhận hàng (COD)</span>
                                    </div>
                                    <p class="text-sm text-gray-500 mt-1 ml-8">Thanh toán bằng tiền mặt khi nhận hàng</p>
                                </div>
                            </label>

                            <!-- VNPay -->
                            <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                                <input type="radio" name="paymentMethod" value="VnPay" class="w-5 h-5 text-blue-600">
                                <div class="ml-4 flex-1">
                                    <div class="flex items-center">
                                        <svg class="w-6 h-6 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                                        </svg>
                                        <span class="font-medium text-gray-900">VNPay</span>
                                        <span class="ml-2 px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">Giả lập</span>
                                    </div>
                                    <p class="text-sm text-gray-500 mt-1 ml-8">Thanh toán qua cổng VNPay (Sandbox)</p>
                                </div>
                            </label>

                            <!-- ZaloPay -->
                            <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                                <input type="radio" name="paymentMethod" value="ZaloPay" class="w-5 h-5 text-blue-600">
                                <div class="ml-4 flex-1">
                                    <div class="flex items-center">
                                        <svg class="w-6 h-6 text-cyan-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                        </svg>
                                        <span class="font-medium text-gray-900">ZaloPay</span>
                                        <span class="ml-2 px-2 py-1 bg-cyan-100 text-cyan-800 text-xs rounded-full">Giả lập</span>
                                    </div>
                                    <p class="text-sm text-gray-500 mt-1 ml-8">Thanh toán qua ví ZaloPay (Sandbox)</p>
                                </div>
                            </label>

                            <!-- MoMo -->
                            <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                                <input type="radio" name="paymentMethod" value="MoMo" class="w-5 h-5 text-blue-600">
                                <div class="ml-4 flex-1">
                                    <div class="flex items-center">
                                        <svg class="w-6 h-6 text-pink-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="font-medium text-gray-900">MoMo</span>
                                        <span class="ml-2 px-2 py-1 bg-pink-100 text-pink-800 text-xs rounded-full">Giả lập</span>
                                    </div>
                                    <p class="text-sm text-gray-500 mt-1 ml-8">Thanh toán qua ví MoMo (Sandbox)</p>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="mt-6">
                        <button type="submit" 
                                class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white py-3 px-6 rounded-lg font-semibold hover:from-blue-700 hover:to-blue-800 transition-all duration-200 shadow-md hover:shadow-lg">
                            Đặt hàng
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Tóm tắt đơn hàng -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-md p-6 sticky top-4">
                <h2 class="text-xl font-semibold mb-4 text-gray-800">Tóm tắt đơn hàng</h2>
                
                <div class="space-y-3 mb-4">
                    @if (cartItems != null)
                    {
                        @foreach (var item in cartItems)
                        {
                            <div class="flex justify-between items-start text-sm">
                                <div class="flex-1">
                                    <p class="font-medium text-gray-900">@item.ProductName</p>
                                    <p class="text-gray-500">SL: @item.Quantity</p>
                                </div>
                                <p class="font-medium text-gray-900">@((item.Price * item.Quantity).ToString("N0")) ₫</p>
                            </div>
                        }
                    }
                </div>

                <div class="border-t border-gray-200 pt-4 space-y-2">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Tạm tính</span>
                        <span class="font-medium text-gray-900">@totalAmount.ToString("N0") ₫</span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Phí vận chuyển</span>
                        <span class="font-medium text-gray-900">Miễn phí</span>
                    </div>
                </div>

                <div class="border-t border-gray-200 mt-4 pt-4">
                    <div class="flex justify-between items-center">
                        <span class="text-lg font-semibold text-gray-900">Tổng cộng</span>
                        <span class="text-2xl font-bold text-blue-600">@totalAmount.ToString("N0") ₫</span>
                    </div>
                </div>

                <div class="mt-6 p-4 bg-blue-50 rounded-lg">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                        </svg>
                        <p class="text-sm text-blue-800">
                            <strong>Lưu ý:</strong> Các cổng thanh toán VNPay, ZaloPay và MoMo đang ở chế độ giả lập (sandbox). 
                            Thanh toán sẽ được xử lý tự động mà không cần thẻ thật.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Highlight selected payment method
        document.querySelectorAll('input[name="paymentMethod"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('label').forEach(label => {
                    label.classList.remove('border-blue-500', 'bg-blue-50');
                    label.classList.add('border-gray-200');
                });
                
                if (this.checked) {
                    const label = this.closest('label');
                    label.classList.remove('border-gray-200');
                    label.classList.add('border-blue-500', 'bg-blue-50');
                }
            });
        });

        // Form validation
        document.getElementById('checkoutForm').addEventListener('submit', function(e) {
            const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked');
            if (!paymentMethod) {
                e.preventDefault();
                alert('Vui lòng chọn phương thức thanh toán');
                return false;
            }

            const shippingAddress = document.getElementById('shippingAddress').value.trim();
            if (!shippingAddress) {
                e.preventDefault();
                alert('Vui lòng nhập địa chỉ giao hàng');
                return false;
            }
        });
    </script>
}
