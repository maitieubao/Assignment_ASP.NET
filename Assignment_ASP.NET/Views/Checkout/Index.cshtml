@model Assignment_ASP.NET.Models.User
@{
    ViewData["Title"] = "Thanh toán";
    var cart = ViewBag.CartItems as List<Assignment_ASP.NET.Models.CartItem>;
    decimal total = ViewBag.TotalAmount ?? 0;
}

<div class="max-w-6xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">
            <i class="bi bi-credit-card text-indigo-600 mr-2"></i>
            Thanh toán
        </h1>
        <p class="text-sm text-slate-600 mt-1">Xác nhận thông tin và hoàn tất đơn hàng</p>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700">
            <i class="bi bi-exclamation-triangle mr-2"></i>
            @TempData["Error"]
        </div>
    }

    <form asp-action="PlaceOrder" method="post">
        @Html.AntiForgeryToken()
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <!-- Checkout Form -->
            <div class="lg:col-span-2 space-y-6">
                
                <!-- Thông tin giao hàng -->
                <div class="bg-white rounded-2xl border border-slate-200 p-8">
                    <h2 class="font-bold text-slate-900 mb-6 flex items-center">
                        <i class="bi bi-truck text-indigo-600 mr-2"></i>
                        Thông tin giao hàng
                    </h2>
                    
                    <div class="space-y-5">
                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Họ và tên</label>
                            <input type="text" name="fullName" value="@Model.FullName" readonly
                                   class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg text-sm"/>
                        </div>

                        <div class="grid grid-cols-2 gap-5">
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Email</label>
                                <input type="email" name="email" value="@Model.Email" readonly
                                       class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg text-sm"/>
                            </div>
                            <div>
                                <label class="block text-sm font-semibold text-slate-700 mb-2">Số điện thoại</label>
                                <input type="tel" name="phone" value="@Model.Phone" readonly
                                       class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg text-sm"/>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-semibold text-slate-700 mb-2">Địa chỉ giao hàng</label>
                            <textarea name="shippingAddress" rows="3" 
                                      class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white resize-none text-sm">@Model.Address</textarea>
                        </div>
                    </div>
                </div>

                <!-- Phương thức thanh toán -->
                <div class="bg-white rounded-2xl border border-slate-200 p-8">
                    <h2 class="font-bold text-slate-900 mb-6 flex items-center">
                        <i class="bi bi-wallet2 text-indigo-600 mr-2"></i>
                        Phương thức thanh toán
                    </h2>
                    
                    <div class="space-y-4">
                        <!-- COD Option -->
                        <label class="flex items-start p-5 border-2 border-slate-200 rounded-xl cursor-pointer hover:border-indigo-500 hover:bg-indigo-50/50 transition-all group">
                            <input type="radio" name="paymentMethod" value="COD" class="mt-1 mr-4 w-5 h-5 text-indigo-600" checked/>
                            <div class="flex-1">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <i class="bi bi-cash-coin text-2xl text-green-600 mr-3"></i>
                                        <div>
                                            <div class="font-bold text-slate-900">Thanh toán khi nhận hàng (COD)</div>
                                            <div class="text-sm text-slate-600 mt-1">Thanh toán bằng tiền mặt khi nhận hàng</div>
                                        </div>
                                    </div>
                                    <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-semibold rounded-full">Phổ biến</span>
                                </div>
                            </div>
                        </label>

                        <!-- Bank Transfer Option -->
                        <label class="flex items-start p-5 border-2 border-slate-200 rounded-xl cursor-pointer hover:border-indigo-500 hover:bg-indigo-50/50 transition-all group">
                            <input type="radio" name="paymentMethod" value="Bank" class="mt-1 mr-4 w-5 h-5 text-indigo-600"/>
                            <div class="flex-1">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <i class="bi bi-bank text-2xl text-indigo-600 mr-3"></i>
                                        <div>
                                            <div class="font-bold text-slate-900">Chuyển khoản ngân hàng</div>
                                            <div class="text-sm text-slate-600 mt-1">Thanh toán qua chuyển khoản ngân hàng</div>
                                        </div>
                                    </div>
                                    <span class="px-3 py-1 bg-indigo-100 text-indigo-700 text-xs font-semibold rounded-full">Nhanh chóng</span>
                                </div>
                            </div>
                        </label>

                        <!-- VnPay Option -->
                        <label class="flex items-start p-5 border-2 border-slate-200 rounded-xl cursor-pointer hover:border-indigo-500 hover:bg-indigo-50/50 transition-all group">
                            <input type="radio" name="paymentMethod" value="VnPay" class="mt-1 mr-4 w-5 h-5 text-indigo-600"/>
                            <div class="flex-1">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center">
                                        <img src="https://vnpay.vn/s1/statics.vnpay.vn/2023/6/0oxhzjmxbksr1686814746087.png" alt="VNPAY" class="h-8 mr-3 object-contain">
                                        <div>
                                            <div class="font-bold text-slate-900">Ví điện tử VNPAY</div>
                                            <div class="text-sm text-slate-600 mt-1">Quét mã QR hoặc thẻ ATM/Visa</div>
                                        </div>
                                    </div>
                                    <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full">Khuyên dùng</span>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-2xl border border-slate-200 p-6 sticky top-24">
                    <h2 class="font-bold text-slate-900 mb-6 text-sm">ĐƠN HÀNG CỦA BẠN</h2>

                    <div class="space-y-4 mb-6">
                        @if (cart != null)
                        {
                            @foreach (var item in cart)
                            {
                                <div class="flex justify-between text-sm">
                                    <div>
                                        <span class="text-slate-900">@item.ProductName</span>
                                        <span class="text-slate-500"> x@item.Quantity</span>
                                    </div>
                                    <span class="font-semibold text-slate-900">@item.Total.ToString("N0")₫</span>
                                </div>
                            }
                        }
                    </div>

                    <div class="border-t border-slate-200 pt-4 space-y-3">
                        <div class="flex justify-between text-sm">
                            <span class="text-slate-600">Tạm tính</span>
                            <span class="font-semibold text-slate-900">@total.ToString("N0")₫</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-slate-600">Phí vận chuyển</span>
                            <span class="font-semibold text-green-600">Miễn phí</span>
                        </div>
                        <div class="border-t border-slate-200 pt-3 flex justify-between">
                            <span class="font-bold text-slate-900">Tổng cộng</span>
                            <span class="text-xl font-bold text-indigo-600">@total.ToString("N0")₫</span>
                        </div>
                    </div>

                    <button type="submit" class="w-full mt-6 py-4 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors">
                        <i class="bi bi-check-circle mr-2"></i>
                        Đặt hàng
                    </button>

                    <div class="mt-4 text-center">
                        <a asp-controller="Cart" asp-action="Index" class="text-sm text-indigo-600 hover:text-indigo-700">
                            <i class="bi bi-arrow-left mr-1"></i>
                            Quay lại giỏ hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    input[type="radio"]:checked + div {
        color: #4f46e5;
    }
</style>