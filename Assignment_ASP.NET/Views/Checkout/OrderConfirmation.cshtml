@model Assignment_ASP.NET.Models.Order
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
}

<div class="max-w-4xl mx-auto">
    <!-- Success Animation -->
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-green-100 rounded-full mb-6 animate-bounce-slow">
            <i class="bi bi-check-circle-fill text-5xl text-green-600"></i>
        </div>
        <h1 class="text-3xl font-bold text-slate-900 mb-2">Đặt hàng thành công!</h1>
        <p class="text-slate-600">Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi</p>
    </div>

    @if (TempData["PaymentSuccess"] != null)
    {
        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg text-green-700 text-center">
            <i class="bi bi-check-circle mr-2"></i>
            @TempData["PaymentSuccess"]
        </div>
    }

    <!-- Thông tin đơn hàng -->
    <div class="bg-white rounded-2xl border border-slate-200 p-8 mb-6">
        <div class="flex items-center justify-between mb-6 pb-6 border-b border-slate-200">
            <div>
                <p class="text-sm text-slate-600 mb-1">Mã đơn hàng</p>
                <p class="text-2xl font-bold text-slate-900">#@Model.OrderID.ToString("D6")</p>
            </div>
            <div class="text-right">
                <p class="text-sm text-slate-600 mb-1">Ngày đặt</p>
                <p class="font-semibold text-slate-900">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>

        <!-- Trạng thái -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-4">
                <p class="text-sm text-slate-600 mb-2">Trạng thái đơn hàng</p>
                <div class="flex items-center">
                    @if (Model.Status == "Pending")
                    {
                        <span class="px-3 py-1 bg-yellow-100 text-yellow-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-clock mr-1"></i>Chờ xử lý
                        </span>
                    }
                    else if (Model.Status == "Approved")
                    {
                        <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-check-circle mr-1"></i>Đã duyệt
                        </span>
                    }
                </div>
            </div>

            <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-4">
                <p class="text-sm text-slate-600 mb-2">Phương thức thanh toán</p>
                <div class="flex items-center">
                    @if (Model.PaymentMethod == "COD")
                    {
                        <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-cash-coin mr-1"></i>COD
                        </span>
                    }
                    else if (Model.PaymentMethod == "VnPay")
                    {
                        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-credit-card mr-1"></i>VNPay
                        </span>
                    }
                    else if (Model.PaymentMethod == "ZaloPay")
                    {
                        <span class="px-3 py-1 bg-cyan-100 text-cyan-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-wallet2 mr-1"></i>ZaloPay
                        </span>
                    }
                    else if (Model.PaymentMethod == "MoMo")
                    {
                        <span class="px-3 py-1 bg-pink-100 text-pink-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-wallet mr-1"></i>MoMo
                        </span>
                    }
                    else
                    {
                        <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm font-semibold rounded-full">
                            @Model.PaymentMethod
                        </span>
                    }
                </div>
            </div>

            <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-4">
                <p class="text-sm text-slate-600 mb-2">Trạng thái thanh toán</p>
                <div class="flex items-center">
                    @if (Model.PaymentStatus == "Pending")
                    {
                        <span class="px-3 py-1 bg-yellow-100 text-yellow-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-hourglass-split mr-1"></i>Chưa thanh toán
                        </span>
                    }
                    else if (Model.PaymentStatus == "Completed")
                    {
                        <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded-full">
                            <i class="bi bi-check-circle mr-1"></i>Đã thanh toán
                        </span>
                    }
                </div>
            </div>
        </div>

        <!-- Địa chỉ giao hàng -->
        <div class="bg-slate-50 rounded-xl p-4 mb-6">
            <p class="text-sm font-semibold text-slate-700 mb-2">
                <i class="bi bi-geo-alt text-indigo-600 mr-1"></i>
                Địa chỉ giao hàng
            </p>
            <p class="text-slate-900">@Model.ShippingAddress</p>
        </div>

        <!-- Chi tiết sản phẩm -->
        <div>
            <h3 class="font-bold text-slate-900 mb-4">Chi tiết đơn hàng</h3>
            <div class="space-y-3">
                @if (Model.OrderDetails != null)
                {
                    @foreach (var item in Model.OrderDetails)
                    {
                        <div class="flex items-center justify-between py-3 border-b border-slate-100">
                            <div class="flex items-center flex-1">
                                @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                {
                                    <img src="@item.Product.ImageUrl" alt="@item.Product.ProductName" 
                                         class="w-16 h-16 object-cover rounded-lg mr-4"/>
                                }
                                <div>
                                    <p class="font-semibold text-slate-900">@item.Product.ProductName</p>
                                    <p class="text-sm text-slate-600">
                                        @item.Price.ToString("N0")₫ × @item.Quantity
                                    </p>
                                </div>
                            </div>
                            <p class="font-bold text-slate-900">@((item.Price * item.Quantity).ToString("N0"))₫</p>
                        </div>
                    }
                }
            </div>

            <!-- Tổng tiền -->
            <div class="mt-6 pt-6 border-t-2 border-slate-200">
                <div class="flex justify-between items-center">
                    <span class="text-lg font-bold text-slate-900">Tổng cộng</span>
                    <span class="text-3xl font-bold text-indigo-600">@Model.TotalAmount.ToString("N0")₫</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông tin thanh toán COD -->
    @if (Model.PaymentMethod == "COD")
    {
        <div class="bg-amber-50 border border-amber-200 rounded-xl p-6 mb-6">
            <div class="flex items-start">
                <i class="bi bi-info-circle text-amber-600 text-2xl mr-4 mt-1"></i>
                <div>
                    <h3 class="font-bold text-amber-900 mb-2">Hướng dẫn thanh toán COD</h3>
                    <ul class="text-sm text-amber-800 space-y-2">
                        <li class="flex items-start">
                            <i class="bi bi-check2 mr-2 mt-1"></i>
                            <span>Vui lòng chuẩn bị số tiền <strong>@Model.TotalAmount.ToString("N0")₫</strong> để thanh toán khi nhận hàng</span>
                        </li>
                        <li class="flex items-start">
                            <i class="bi bi-check2 mr-2 mt-1"></i>
                            <span>Kiểm tra kỹ sản phẩm trước khi thanh toán</span>
                        </li>
                        <li class="flex items-start">
                            <i class="bi bi-check2 mr-2 mt-1"></i>
                            <span>Đơn hàng sẽ được giao trong vòng 2-3 ngày làm việc</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }

    <!-- Thông tin thanh toán Bank -->
    @if (Model.PaymentMethod == "Bank" && Model.PaymentStatus == "Completed")
    {
        <div class="bg-green-50 border border-green-200 rounded-xl p-6 mb-6">
            <div class="flex items-start">
                <i class="bi bi-check-circle-fill text-green-600 text-2xl mr-4 mt-1"></i>
                <div>
                    <h3 class="font-bold text-green-900 mb-2">Thanh toán thành công</h3>
                    <p class="text-sm text-green-800">
                        Chúng tôi đã nhận được thanh toán của bạn. Đơn hàng sẽ được xử lý và giao trong vòng 1-2 ngày làm việc.
                    </p>
                </div>
            </div>
        </div>
    }

    <!-- Action Buttons -->
    <div class="flex flex-col sm:flex-row gap-4">
        <a asp-controller="Home" asp-action="Index" 
           class="flex-1 py-4 px-6 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200 transition-colors text-center">
            <i class="bi bi-house-door mr-2"></i>
            Về trang chủ
        </a>
        <a asp-controller="MyOrders" asp-action="Index" 
           class="flex-1 py-4 px-6 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors text-center">
            <i class="bi bi-list-ul mr-2"></i>
            Xem đơn hàng của tôi
        </a>
    </div>
</div>

<style>
    @@keyframes bounce-slow {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .animate-bounce-slow {
        animation: bounce-slow 2s ease-in-out infinite;
    }
</style>