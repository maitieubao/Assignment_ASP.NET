@model Assignment_ASP.NET.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="max-w-5xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="text-indigo-600 hover:text-indigo-700 font-semibold">
            <i class="bi bi-arrow-left mr-1"></i>
            Quay lại danh sách
        </a>
    </div>

    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">
            Chi tiết đơn hàng #@Model.OrderID.ToString("D6")
        </h1>
        <p class="text-sm text-slate-600 mt-1">
            Đặt ngày @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")
        </p>
    </div>

    <!-- Trạng thái đơn hàng -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-6">
            <p class="text-sm text-slate-600 mb-2">Trạng thái đơn hàng</p>
            <div class="flex items-center">
                @if (Model.Status == "Pending")
                {
                    <span class="px-3 py-1 bg-yellow-100 text-yellow-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-clock mr-1"></i>Chờ xử lý
                    </span>
                }
                else if (Model.Status == "Approved")
                {
                    <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-check-circle mr-1"></i>Đã duyệt
                    </span>
                }
                else if (Model.Status == "Shipped")
                {
                    <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-truck mr-1"></i>Đang giao
                    </span>
                }
                else if (Model.Status == "Canceled")
                {
                    <span class="px-3 py-1 bg-red-100 text-red-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-x-circle mr-1"></i>Đã hủy
                    </span>
                }
            </div>
        </div>

        <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6">
            <p class="text-sm text-slate-600 mb-2">Phương thức thanh toán</p>
            <div class="flex items-center">
                @if (Model.PaymentMethod == "COD")
                {
                    <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-cash-coin mr-1"></i>COD
                    </span>
                }
                else if (Model.PaymentMethod == "Bank")
                {
                    <span class="px-3 py-1 bg-indigo-100 text-indigo-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-bank mr-1"></i>Ngân hàng
                    </span>
                }
            </div>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-6">
            <p class="text-sm text-slate-600 mb-2">Trạng thái thanh toán</p>
            <div class="flex items-center">
                @if (Model.PaymentStatus == "Pending")
                {
                    <span class="px-3 py-1 bg-yellow-100 text-yellow-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-hourglass-split mr-1"></i>Chưa thanh toán
                    </span>
                }
                else if (Model.PaymentStatus == "Completed")
                {
                    <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-semibold rounded-full">
                        <i class="bi bi-check-circle mr-1"></i>Đã thanh toán
                    </span>
                }
            </div>
        </div>
    </div>

    <!-- Địa chỉ giao hàng -->
    <div class="bg-white rounded-2xl border border-slate-200 p-6 mb-6">
        <h3 class="font-bold text-slate-900 mb-4 flex items-center">
            <i class="bi bi-geo-alt text-indigo-600 mr-2"></i>
            Địa chỉ giao hàng
        </h3>
        <p class="text-slate-900">@Model.ShippingAddress</p>
    </div>

    <!-- Chi tiết sản phẩm -->
    <div class="bg-white rounded-2xl border border-slate-200 p-6 mb-6">
        <h3 class="font-bold text-slate-900 mb-4">Chi tiết sản phẩm</h3>
        <div class="space-y-4">
            @if (Model.OrderDetails != null)
            {
                @foreach (var item in Model.OrderDetails)
                {
                    <div class="flex items-center justify-between py-4 border-b border-slate-100 last:border-0">
                        <div class="flex items-center flex-1">
                            @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                            {
                                <img src="@item.Product.ImageUrl" alt="@item.Product.ProductName" 
                                     class="w-20 h-20 object-cover rounded-lg mr-4"/>
                            }
                            <div>
                                <p class="font-semibold text-slate-900 mb-1">@item.Product.ProductName</p>
                                <p class="text-sm text-slate-600">
                                    @item.Price.ToString("N0")₫ × @item.Quantity
                                </p>
                            </div>
                        </div>
                        <p class="font-bold text-slate-900 text-lg">@((item.Price * item.Quantity).ToString("N0"))₫</p>
                    </div>
                }
            }
        </div>

        <!-- Tổng tiền -->
        <div class="mt-6 pt-6 border-t-2 border-slate-200">
            <div class="flex justify-between items-center">
                <span class="text-lg font-bold text-slate-900">Tổng cộng</span>
                <span class="text-3xl font-bold text-indigo-600">@Model.TotalAmount.ToString("N0")₫</span>
            </div>
        </div>
    </div>

    <!-- Hướng dẫn thanh toán (nếu COD và chưa thanh toán) -->
    @if (Model.PaymentMethod == "COD" && Model.PaymentStatus == "Pending")
    {
        <div class="bg-amber-50 border border-amber-200 rounded-xl p-6">
            <div class="flex items-start">
                <i class="bi bi-info-circle text-amber-600 text-2xl mr-4 mt-1"></i>
                <div>
                    <h3 class="font-bold text-amber-900 mb-2">Hướng dẫn thanh toán COD</h3>
                    <ul class="text-sm text-amber-800 space-y-2">
                        <li class="flex items-start">
                            <i class="bi bi-check2 mr-2 mt-1"></i>
                            <span>Vui lòng chuẩn bị số tiền <strong>@Model.TotalAmount.ToString("N0")₫</strong> để thanh toán khi nhận hàng</span>
                        </li>
                        <li class="flex items-start">
                            <i class="bi bi-check2 mr-2 mt-1"></i>
                            <span>Kiểm tra kỹ sản phẩm trước khi thanh toán</span>
                        </li>
                        <li class="flex items-start">
                            <i class="bi bi-check2 mr-2 mt-1"></i>
                            <span>Đơn hàng sẽ được giao trong vòng 2-3 ngày làm việc</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>
