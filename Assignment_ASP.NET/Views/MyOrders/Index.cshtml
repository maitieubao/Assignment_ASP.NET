@model IEnumerable<Assignment_ASP.NET.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="max-w-6xl mx-auto">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">
            <i class="bi bi-bag-check text-indigo-600 mr-2"></i>
            Đơn hàng của tôi
        </h1>
        <p class="text-sm text-slate-600 mt-1">Quản lý và theo dõi đơn hàng của bạn</p>
    </div>

    @if (!Model.Any())
    {
        <div class="bg-white rounded-2xl border border-slate-200 p-12 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-slate-100 rounded-full mb-4">
                <i class="bi bi-inbox text-4xl text-slate-400"></i>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Chưa có đơn hàng nào</h3>
            <p class="text-slate-600 mb-6">Bạn chưa đặt đơn hàng nào. Hãy khám phá sản phẩm của chúng tôi!</p>
            <a asp-controller="Home" asp-action="Index" 
               class="inline-block px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors">
                <i class="bi bi-shop mr-2"></i>
                Mua sắm ngay
            </a>
        </div>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var order in Model)
            {
                <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="p-6">
                        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                            <div class="mb-4 md:mb-0">
                                <div class="flex items-center gap-3 mb-2">
                                    <h3 class="text-lg font-bold text-slate-900">
                                        Đơn hàng #@order.OrderID.ToString("D6")
                                    </h3>
                                    @if (order.Status == "Pending")
                                    {
                                        <span class="px-3 py-1 bg-yellow-100 text-yellow-700 text-xs font-semibold rounded-full">
                                            <i class="bi bi-clock mr-1"></i>Chờ xử lý
                                        </span>
                                    }
                                    else if (order.Status == "Approved")
                                    {
                                        <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-semibold rounded-full">
                                            <i class="bi bi-check-circle mr-1"></i>Đã duyệt
                                        </span>
                                    }
                                    else if (order.Status == "Shipped")
                                    {
                                        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-semibold rounded-full">
                                            <i class="bi bi-truck mr-1"></i>Đang giao
                                        </span>
                                    }
                                    else if (order.Status == "Canceled")
                                    {
                                        <span class="px-3 py-1 bg-red-100 text-red-700 text-xs font-semibold rounded-full">
                                            <i class="bi bi-x-circle mr-1"></i>Đã hủy
                                        </span>
                                    }
                                </div>
                                <p class="text-sm text-slate-600">
                                    <i class="bi bi-calendar3 mr-1"></i>
                                    @order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>

                            <div class="flex flex-col items-start md:items-end gap-2">
                                <div class="text-right">
                                    <p class="text-sm text-slate-600 mb-1">Tổng tiền</p>
                                    <p class="text-2xl font-bold text-indigo-600">@order.TotalAmount.ToString("N0")₫</p>
                                </div>
                            </div>
                        </div>

                        <div class="border-t border-slate-200 pt-4 mt-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                                <div>
                                    <p class="text-sm text-slate-600 mb-1">
                                        <i class="bi bi-wallet2 mr-1"></i>
                                        Phương thức thanh toán
                                    </p>
                                    <p class="font-semibold text-slate-900">
                                        @if (order.PaymentMethod == "COD")
                                        {
                                            <span class="text-green-600">
                                                <i class="bi bi-cash-coin mr-1"></i>COD
                                            </span>
                                        }
                                        else if (order.PaymentMethod == "Bank")
                                        {
                                            <span class="text-indigo-600">
                                                <i class="bi bi-bank mr-1"></i>Ngân hàng
                                            </span>
                                        }
                                    </p>
                                </div>

                                <div>
                                    <p class="text-sm text-slate-600 mb-1">
                                        <i class="bi bi-credit-card mr-1"></i>
                                        Trạng thái thanh toán
                                    </p>
                                    <p class="font-semibold text-slate-900">
                                        @if (order.PaymentStatus == "Pending")
                                        {
                                            <span class="text-yellow-600">
                                                <i class="bi bi-hourglass-split mr-1"></i>Chưa thanh toán
                                            </span>
                                        }
                                        else if (order.PaymentStatus == "Completed")
                                        {
                                            <span class="text-green-600">
                                                <i class="bi bi-check-circle mr-1"></i>Đã thanh toán
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>

                            <div class="flex justify-end">
                                <a asp-action="Details" asp-route-id="@order.OrderID" 
                                   class="px-4 py-2 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors text-sm">
                                    <i class="bi bi-eye mr-1"></i>
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
