@model Assignment_ASP.NET.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Quản Trị";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-slate-900">Dashboard Quản Trị</h1>
            <p class="text-slate-600 mt-1">Tổng quan hoạt động hệ thống</p>
        </div>
        <div class="text-sm text-slate-500">
            <i class="bi bi-calendar3"></i> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
        </div>
    </div>

    <!-- Filter Form -->
    <div class="bg-white border border-slate-200 p-4 rounded-lg shadow-sm">
        <form method="get" class="flex flex-wrap items-end gap-6">
            <div>
                <label class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">Xem theo</label>
                <div class="flex bg-slate-100 rounded-lg p-1">
                    <button type="submit" name="filter" value="today" class="px-4 py-2 text-sm font-medium rounded-md transition-all @(ViewBag.CurrentFilter == "today" ? "bg-white text-indigo-600 shadow-sm" : "text-slate-600 hover:text-slate-900")">Hôm nay</button>
                    <button type="submit" name="filter" value="week" class="px-4 py-2 text-sm font-medium rounded-md transition-all @(ViewBag.CurrentFilter == "week" ? "bg-white text-indigo-600 shadow-sm" : "text-slate-600 hover:text-slate-900")">Tuần này</button>
                    <button type="submit" name="filter" value="month" class="px-4 py-2 text-sm font-medium rounded-md transition-all @(ViewBag.CurrentFilter == "month" ? "bg-white text-indigo-600 shadow-sm" : "text-slate-600 hover:text-slate-900")">Tháng này</button>
                    <button type="submit" name="filter" value="all" class="px-4 py-2 text-sm font-medium rounded-md transition-all @(ViewBag.CurrentFilter == "all" ? "bg-white text-indigo-600 shadow-sm" : "text-slate-600 hover:text-slate-900")">Tất cả</button>
                </div>
            </div>
            
            <div class="flex items-center gap-4 border-l border-slate-200 pl-6">
                <div>
                    <label for="startDate" class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Từ ngày</label>
                    <input type="date" id="startDate" name="startDate" value="@ViewBag.StartDate" class="block w-full px-3 py-2 border border-slate-300 rounded-md text-sm shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div>
                    <label for="endDate" class="block text-xs font-semibold text-slate-500 uppercase tracking-wider mb-1">Đến ngày</label>
                    <input type="date" id="endDate" name="endDate" value="@ViewBag.EndDate" class="block w-full px-3 py-2 border border-slate-300 rounded-md text-sm shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <button type="submit" class="mt-6 px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
                    <i class="bi bi-funnel-fill"></i> Lọc
                </button>
            </div>
        </form>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Filtered Revenue -->
        <div class="bg-white border border-slate-200 p-6 hover:shadow-lg transition-shadow relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                <i class="bi bi-currency-dollar text-6xl text-green-600"></i>
            </div>
            <div class="relative z-10">
                <p class="text-sm text-slate-600 font-medium">@Model.FilterLabel</p>
                <h3 class="text-3xl font-bold text-slate-900 mt-2">@Model.FilteredRevenue.ToString("N0") ₫</h3>
                <p class="text-xs text-green-600 mt-2 font-medium flex items-center">
                    <i class="bi bi-check-circle-fill mr-1"></i> Đã thanh toán
                </p>
            </div>
            <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-green-400 to-green-600"></div>
        </div>

        <!-- Monthly Revenue -->
        <div class="bg-white border border-slate-200 p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-600 font-medium">Doanh Thu Tháng Này</p>
                    <h3 class="text-2xl font-bold text-slate-900 mt-2">@Model.MonthlyRevenue.ToString("N0") ₫</h3>
                    <p class="text-xs text-blue-600 mt-2">
                        <i class="bi bi-calendar-month"></i> @DateTime.Now.ToString("MMMM yyyy")
                    </p>
                </div>
                <div class="w-12 h-12 bg-blue-100 flex items-center justify-center">
                    <i class="bi bi-graph-up-arrow text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Orders -->
        <div class="bg-white border border-slate-200 p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-600 font-medium">Tổng Đơn Hàng</p>
                    <h3 class="text-2xl font-bold text-slate-900 mt-2">@Model.TotalOrders</h3>
                    <p class="text-xs text-indigo-600 mt-2">
                        <i class="bi bi-check-circle"></i> @Model.CompletedOrders hoàn thành
                    </p>
                </div>
                <div class="w-12 h-12 bg-indigo-100 flex items-center justify-center">
                    <i class="bi bi-receipt text-indigo-600 text-xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Products -->
        <div class="bg-white border border-slate-200 p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-slate-600 font-medium">Tổng Sản Phẩm</p>
                    <h3 class="text-2xl font-bold text-slate-900 mt-2">@Model.TotalProducts</h3>
                    @if (Model.LowStockProducts > 0)
                    {
                        <p class="text-xs text-red-600 mt-2">
                            <i class="bi bi-exclamation-triangle"></i> @Model.LowStockProducts sắp hết hàng
                        </p>
                    }
                    else
                    {
                        <p class="text-xs text-green-600 mt-2">
                            <i class="bi bi-check-circle"></i> Tồn kho ổn định
                        </p>
                    }
                </div>
                <div class="w-12 h-12 bg-purple-100 flex items-center justify-center">
                    <i class="bi bi-box-seam text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Revenue Chart -->
        <div class="lg:col-span-2 bg-white border border-slate-200 p-6 rounded-lg shadow-sm">
            <h2 class="text-lg font-bold text-slate-900 mb-4">Biểu Đồ Doanh Thu</h2>
            <div class="relative w-full h-80">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>

        <!-- Order Status Chart -->
        <div class="bg-white border border-slate-200 p-6 rounded-lg shadow-sm">
            <h2 class="text-lg font-bold text-slate-900 mb-4">Tỷ Lệ Đơn Hàng</h2>
            <div class="relative w-full h-64 flex items-center justify-center">
                 <canvas id="orderStatusChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Order Status Overview -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Order Status -->
        <div class="bg-white border border-slate-200 p-6">
            <h2 class="text-lg font-bold text-slate-900 mb-4">Trạng Thái Đơn Hàng</h2>
            <div class="space-y-3">
                <div class="flex items-center justify-between p-3 bg-yellow-50 border border-yellow-200">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-yellow-500 flex items-center justify-center">
                            <i class="bi bi-clock text-white"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-slate-900">Chờ xử lý</p>
                            <p class="text-xs text-slate-600">Pending</p>
                        </div>
                    </div>
                    <span class="text-2xl font-bold text-yellow-600">@Model.PendingOrders</span>
                </div>

                <div class="flex items-center justify-between p-3 bg-blue-50 border border-blue-200">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-blue-500 flex items-center justify-center">
                            <i class="bi bi-arrow-repeat text-white"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-slate-900">Đang xử lý</p>
                            <p class="text-xs text-slate-600">Processing</p>
                        </div>
                    </div>
                    <span class="text-2xl font-bold text-blue-600">@Model.ProcessingOrders</span>
                </div>

                <div class="flex items-center justify-between p-3 bg-green-50 border border-green-200">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-green-500 flex items-center justify-center">
                            <i class="bi bi-check-circle text-white"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-slate-900">Hoàn thành</p>
                            <p class="text-xs text-slate-600">Completed</p>
                        </div>
                    </div>
                    <span class="text-2xl font-bold text-green-600">@Model.CompletedOrders</span>
                </div>

                <div class="flex items-center justify-between p-3 bg-red-50 border border-red-200">
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-red-500 flex items-center justify-center">
                            <i class="bi bi-x-circle text-white"></i>
                        </div>
                        <div>
                            <p class="font-semibold text-slate-900">Đã hủy</p>
                            <p class="text-xs text-slate-600">Cancelled</p>
                        </div>
                    </div>
                    <span class="text-2xl font-bold text-red-600">@Model.CancelledOrders</span>
                </div>
            </div>
        </div>

        <!-- Today's Revenue -->
        <div class="bg-white border border-slate-200 p-6">
            <h2 class="text-lg font-bold text-slate-900 mb-4">Thống Kê Hôm Nay</h2>
            <div class="space-y-4">
                <div class="p-4 bg-gradient-to-r from-indigo-500 to-purple-600 text-white">
                    <p class="text-sm opacity-90">Doanh Thu Hôm Nay</p>
                    <h3 class="text-3xl font-bold mt-2">@Model.TodayRevenue.ToString("N0") ₫</h3>
                    <p class="text-xs opacity-75 mt-2">@DateTime.Now.ToString("dddd, dd/MM/yyyy")</p>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div class="p-4 bg-slate-50 border border-slate-200">
                        <p class="text-xs text-slate-600">Tổng Người Dùng</p>
                        <h4 class="text-2xl font-bold text-slate-900 mt-1">@Model.TotalUsers</h4>
                    </div>
                    <div class="p-4 bg-slate-50 border border-slate-200">
                        <p class="text-xs text-slate-600">Danh Mục</p>
                        <h4 class="text-2xl font-bold text-slate-900 mt-1">@Model.TotalCategories</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Selling Products -->
    @if (Model.TopSellingProducts.Any())
    {
        <div class="bg-white border border-slate-200 p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-900">Top 5 Sản Phẩm Bán Chạy</h2>
                <a asp-controller="Products" asp-action="Index" class="text-sm text-indigo-600 hover:text-indigo-700">
                    Xem tất cả <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-slate-200">
                            <th class="text-left py-3 px-4 text-sm font-semibold text-slate-700">Sản phẩm</th>
                            <th class="text-right py-3 px-4 text-sm font-semibold text-slate-700">Đã bán</th>
                            <th class="text-right py-3 px-4 text-sm font-semibold text-slate-700">Doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.TopSellingProducts)
                        {
                            <tr class="border-b border-slate-100 hover:bg-slate-50">
                                <td class="py-3 px-4">
                                    <div class="flex items-center space-x-3">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.ProductName" class="w-12 h-12 object-cover border border-slate-200" />
                                        }
                                        else
                                        {
                                            <div class="w-12 h-12 bg-slate-200 flex items-center justify-center">
                                                <i class="bi bi-image text-slate-400"></i>
                                            </div>
                                        }
                                        <span class="font-medium text-slate-900">@product.ProductName</span>
                                    </div>
                                </td>
                                <td class="py-3 px-4 text-right">
                                    <span class="inline-flex items-center px-3 py-1 bg-indigo-100 text-indigo-700 text-sm font-semibold">
                                        @product.TotalSold
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-right font-semibold text-slate-900">
                                    @product.Revenue.ToString("N0") ₫
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Recent Orders -->
    @if (Model.RecentOrders.Any())
    {
        <div class="bg-white border border-slate-200 p-6">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-bold text-slate-900">Đơn Hàng Gần Đây</h2>
                <a asp-controller="Orders" asp-action="Index" class="text-sm text-indigo-600 hover:text-indigo-700">
                    Xem tất cả <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-slate-200">
                            <th class="text-left py-3 px-4 text-sm font-semibold text-slate-700">Mã đơn</th>
                            <th class="text-left py-3 px-4 text-sm font-semibold text-slate-700">Khách hàng</th>
                            <th class="text-left py-3 px-4 text-sm font-semibold text-slate-700">Ngày đặt</th>
                            <th class="text-right py-3 px-4 text-sm font-semibold text-slate-700">Tổng tiền</th>
                            <th class="text-center py-3 px-4 text-sm font-semibold text-slate-700">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr class="border-b border-slate-100 hover:bg-slate-50">
                                <td class="py-3 px-4">
                                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderID" 
                                       class="text-indigo-600 hover:text-indigo-700 font-medium">
                                        #@order.OrderID
                                    </a>
                                </td>
                                <td class="py-3 px-4 text-slate-900">@order.User.FullName</td>
                                <td class="py-3 px-4 text-slate-600 text-sm">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="py-3 px-4 text-right font-semibold text-slate-900">@order.TotalAmount.ToString("N0") ₫</td>
                                <td class="py-3 px-4 text-center">
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            "Pending" => "bg-yellow-100 text-yellow-700",
                                            "Processing" => "bg-blue-100 text-blue-700",
                                            "Completed" => "bg-green-100 text-green-700",
                                            "Cancelled" => "bg-red-100 text-red-700",
                                            _ => "bg-slate-100 text-slate-700"
                                        };
                                        var statusText = order.Status switch
                                        {
                                            "Pending" => "Chờ xử lý",
                                            "Processing" => "Đang xử lý",
                                            "Completed" => "Hoàn thành",
                                            "Cancelled" => "Đã hủy",
                                            _ => order.Status
                                        };
                                    }
                                    <span class="inline-flex items-center px-3 py-1 @statusClass text-xs font-semibold">
                                        @statusText
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="bg-white border border-slate-200 p-6">
        <h2 class="text-lg font-bold text-slate-900 mb-4">Thao Tác Nhanh</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a asp-controller="Products" asp-action="Create" 
               class="flex flex-col items-center justify-center p-6 bg-slate-50 border border-slate-200 hover:bg-indigo-50 hover:border-indigo-300 transition-all group">
                <i class="bi bi-plus-circle text-3xl text-slate-600 group-hover:text-indigo-600 mb-2"></i>
                <span class="text-sm font-medium text-slate-700 group-hover:text-indigo-700">Thêm Sản Phẩm</span>
            </a>

            <a asp-controller="Orders" asp-action="Index" 
               class="flex flex-col items-center justify-center p-6 bg-slate-50 border border-slate-200 hover:bg-indigo-50 hover:border-indigo-300 transition-all group">
                <i class="bi bi-receipt text-3xl text-slate-600 group-hover:text-indigo-600 mb-2"></i>
                <span class="text-sm font-medium text-slate-700 group-hover:text-indigo-700">Quản Lý Đơn Hàng</span>
            </a>

            <a asp-controller="Categories" asp-action="Index" 
               class="flex flex-col items-center justify-center p-6 bg-slate-50 border border-slate-200 hover:bg-indigo-50 hover:border-indigo-300 transition-all group">
                <i class="bi bi-tags text-3xl text-slate-600 group-hover:text-indigo-600 mb-2"></i>
                <span class="text-sm font-medium text-slate-700 group-hover:text-indigo-700">Danh Mục</span>
            </a>

            <a asp-controller="Coupons" asp-action="Create" 
               class="flex flex-col items-center justify-center p-6 bg-slate-50 border border-slate-200 hover:bg-indigo-50 hover:border-indigo-300 transition-all group">
                <i class="bi bi-ticket-perforated text-3xl text-slate-600 group-hover:text-indigo-600 mb-2"></i>
                <span class="text-sm font-medium text-slate-700 group-hover:text-indigo-700">Tạo Mã Giảm Giá</span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart').getContext('2d');
        new Chart(revenueCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.MonthlyStatistics.Select(x => $"T{x.Month}/{x.Year}"))),
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: @Html.Raw(Json.Serialize(Model.MonthlyStatistics.Select(x => x.Revenue))),
                    borderColor: '#4f46e5',
                    backgroundColor: 'rgba(79, 70, 229, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(context.parsed.y);
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [2, 4] },
                        ticks: {
                            callback: function(value) {
                                return new Intl.NumberFormat('vi-VN', { maximumSignificantDigits: 3 }).format(value);
                            }
                        }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Order Status Chart
        const statusCtx = document.getElementById('orderStatusChart').getContext('2d');
        new Chart(statusCtx, {
            type: 'doughnut',
            data: {
                labels: ['Chờ xử lý', 'Đang xử lý', 'Hoàn thành', 'Đã hủy'],
                datasets: [{
                    data: [@Model.PendingOrders, @Model.ProcessingOrders, @Model.CompletedOrders, @Model.CancelledOrders],
                    backgroundColor: ['#eab308', '#3b82f6', '#22c55e', '#ef4444'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            usePointStyle: true,
                            padding: 20,
                            font: { size: 11 }
                        }
                    }
                }
            }
        });
    </script>
}
