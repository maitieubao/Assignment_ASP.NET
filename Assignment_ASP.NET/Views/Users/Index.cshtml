@model IEnumerable<Assignment_ASP.NET.Models.User>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="mb-8 flex items-center justify-between">
    <div>
        <h1 class="text-3xl font-bold text-gray-800">
            <i class="bi bi-people text-purple-600 mr-2"></i>
            Quản lý người dùng
        </h1>
        <p class="text-gray-600 mt-1">Quản lý tất cả người dùng trong hệ thống</p>
    </div>
    <a asp-action="Create" class="px-6 py-3 bg-purple-600 text-white font-bold rounded-xl hover:bg-purple-700">
        <i class="bi bi-person-plus mr-2"></i>
        Thêm người dùng
    </a>
</div>

<!-- Stats -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-2xl p-6 border border-purple-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Tổng người dùng</p>
                <p class="text-3xl font-bold text-purple-600">@Model.Count()</p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-people text-purple-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-2xl p-6 border border-purple-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Quản trị viên</p>
                <p class="text-3xl font-bold text-red-600">@Model.Count(u => u.Role?.RoleName == "Admin")</p>
            </div>
            <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-shield-check text-red-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-2xl p-6 border border-purple-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Nhân viên</p>
                <p class="text-3xl font-bold text-blue-600">@Model.Count(u => u.Role?.RoleName == "Employee")</p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-person-badge text-blue-600 text-xl"></i>
            </div>
        </div>
    </div>
    <div class="bg-white rounded-2xl p-6 border border-purple-100">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">Khách hàng</p>
                <p class="text-3xl font-bold text-green-600">@Model.Count(u => u.Role?.RoleName == "Customer")</p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                <i class="bi bi-person text-green-600 text-xl"></i>
            </div>
        </div>
    </div>
</div>

<!-- Table -->
<div class="bg-white rounded-2xl border border-purple-100 overflow-hidden">
    <div class="p-6 border-b border-purple-100">
        <h2 class="text-lg font-bold text-gray-800">Danh sách người dùng</h2>
    </div>

    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-purple-50 border-b border-purple-100">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">ID</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Tên đăng nhập</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Họ tên</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Email</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-gray-600 uppercase">Vai trò</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-gray-600 uppercase">Hành động</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-purple-50">
                @foreach (var user in Model)
                {
                    <tr class="hover:bg-purple-50 transition-colors">
                        <td class="px-6 py-4">
                            <span class="font-bold text-purple-600">#@user.UserID</span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="font-semibold text-gray-800">@user.Username</span>
                        </td>
                        <td class="px-6 py-4 text-gray-700">@user.FullName</td>
                        <td class="px-6 py-4 text-gray-600">@user.Email</td>
                        <td class="px-6 py-4">
                            @switch (user.Role?.RoleName)
                            {
                                case "Admin":
                                    <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-xs font-bold">
                                        <i class="bi bi-shield-check mr-1"></i>Admin
                                    </span>
                                    break;
                                case "Employee":
                                    <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-xs font-bold">
                                        <i class="bi bi-person-badge mr-1"></i>Employee
                                    </span>
                                    break;
                                default:
                                    <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-bold">
                                        <i class="bi bi-person mr-1"></i>Customer
                                    </span>
                                    break;
                            }
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center justify-end space-x-2">
                                <a asp-action="Details" asp-route-id="@user.UserID" 
                                   class="p-2 text-purple-600 hover:bg-purple-50 rounded-lg" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@user.UserID" 
                                   class="p-2 text-green-600 hover:bg-green-50 rounded-lg" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@user.UserID" 
                                   class="p-2 text-red-600 hover:bg-red-50 rounded-lg" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>