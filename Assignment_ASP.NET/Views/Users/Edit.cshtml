@model Assignment_ASP.NET.Models.User
@{
    ViewData["Title"] = "Sửa người dùng";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="text-slate-600 hover:text-indigo-600 text-sm">
            <i class="bi bi-arrow-left mr-2"></i>Quay lại
        </a>
    </div>

    <div class="mb-8">
        <h1 class="text-2xl font-bold text-slate-900">
            <i class="bi bi-pencil text-indigo-600 mr-2"></i>Sửa người dùng
        </h1>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 p-8">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserID" />
            
            <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl text-red-600 text-sm"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                    <label asp-for="Username" class="block text-sm font-semibold text-slate-700 mb-2">
                        Tên đăng nhập
                    </label>
                    <input asp-for="Username" readonly
                           class="w-full px-4 py-3 bg-slate-100 border border-slate-200 rounded-lg text-sm text-slate-600"/>
                </div>

                <div>
                    <label asp-for="FullName" class="block text-sm font-semibold text-slate-700 mb-2">
                        Họ tên <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="FullName" 
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"/>
                    <span asp-validation-for="FullName" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-semibold text-slate-700 mb-2">
                        Email <span class="text-red-500">*</span>
                    </label>
                    <input asp-for="Email" type="email"
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"/>
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <div>
                    <label asp-for="Phone" class="block text-sm font-semibold text-slate-700 mb-2">
                        Số điện thoại
                    </label>
                    <input asp-for="Phone" 
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"/>
                </div>

                <div class="md:col-span-2">
                    <label asp-for="Address" class="block text-sm font-semibold text-slate-700 mb-2">
                        Địa chỉ
                    </label>
                    <input asp-for="Address" 
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"/>
                </div>

                <div>
                    <label asp-for="RoleID" class="block text-sm font-semibold text-slate-700 mb-2">
                        Vai trò <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="RoleID" asp-items="ViewBag.Roles"
                            class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 text-sm">
                        <option value="">-- Chọn vai trò --</option>
                    </select>
                    <span asp-validation-for="RoleID" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="flex justify-end space-x-4 mt-8 pt-6 border-t border-slate-200">
                <a asp-action="Index" class="px-6 py-3 bg-slate-100 text-slate-700 font-medium rounded-lg hover:bg-slate-200 text-sm">
                    Hủy
                </a>
                <button type="submit" class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 text-sm">
                    Lưu
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}