@model Assignment_ASP.NET.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="bg-[#F5F5F7] min-h-screen font-sans text-[#1d1d1f]">
    
    <!-- 1. HERO SECTION: Full Width & Cinematic -->
    <div class="relative w-full h-[60vh] md:h-[70vh] overflow-hidden bg-black text-white mb-12" id="heroBanner">
        <!-- Slides -->
        <div class="relative w-full h-full">
            <div class="hero-slide absolute inset-0 transition-opacity duration-1000 opacity-100">
                <img src="~/images/iphone_banner.png" class="w-full h-full object-cover opacity-80" alt="Banner 1">
                <div class="absolute inset-0 flex flex-col justify-center items-center text-center p-6">
                    <h2 class="text-4xl md:text-6xl font-bold tracking-tight mb-4">Công nghệ Tương lai</h2>
                    <p class="text-lg md:text-xl text-gray-300 mb-8 max-w-2xl">Trải nghiệm sức mạnh đột phá trong tầm tay bạn.</p>
                    <button onclick="scrollToProducts()" class="px-8 py-3 bg-white text-black font-semibold rounded-full hover:bg-gray-200 transition-colors">
                        Khám phá ngay
                    </button>
                </div>
            </div>
            <!-- Bạn có thể thêm các slide khác tương tự ở đây với opacity-0 -->
        </div>
        
        <!-- Simple Dots (No Icons) -->
        <div class="absolute bottom-8 left-0 right-0 flex justify-center gap-4 z-20">
            <button class="w-12 h-1 bg-white rounded-full opacity-100"></button>
            <button class="w-12 h-1 bg-white rounded-full opacity-30 hover:opacity-100 transition-opacity"></button>
        </div>
    </div>

    <!-- 2. CATEGORY NAVIGATION: Horizontal Sticky Bar (Thay thế Sidebar) -->
    <div class="sticky top-0 z-40 bg-[#F5F5F7]/90 backdrop-blur-md border-b border-gray-200 py-4 mb-10 transition-all duration-300" id="categoryNav">
        <div class="container mx-auto px-6">
            <div class="flex items-center justify-between gap-4">
                <span class="font-bold text-lg hidden md:block mr-6">DANH MỤC</span>
                
                <!-- Scrollable List -->
                <div class="flex-1 overflow-x-auto no-scrollbar">
                    <div class="flex gap-2 md:gap-4 whitespace-nowrap">
                        <a asp-action="Index" asp-route-categoryId="" 
                           class="px-5 py-2 rounded-full text-sm font-medium transition-all duration-200 border 
                           @(Model.CurrentCategoryId == null ? "bg-black text-white border-black" : "bg-white text-gray-600 border-gray-200 hover:border-black hover:text-black")">
                            Tất cả
                        </a>

                        @foreach (var category in Model.Categories)
                        {
                            <a asp-action="Index" asp-route-categoryId="@category.CategoryID" 
                               class="px-5 py-2 rounded-full text-sm font-medium transition-all duration-200 border
                               @(Model.CurrentCategoryId == category.CategoryID ? "bg-black text-white border-black" : "bg-white text-gray-600 border-gray-200 hover:border-black hover:text-black")">
                                @category.CategoryName
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 3. MAIN CONTENT -->
    <div class="container mx-auto px-6 pb-20" id="productList">
        
        <!-- Filter Info -->
        <div class="flex flex-col md:flex-row justify-between items-end md:items-center mb-8 border-b border-gray-300 pb-4">
            <div>
                <h1 class="text-3xl font-bold tracking-tight mb-2">Sản phẩm mới</h1>
                <p class="text-gray-500 text-sm">Hiển thị @Model.Products.Count() kết quả</p>
            </div>
            
            <!-- Sort dropdown (Minimal text) -->
            <div class="mt-4 md:mt-0 relative group">
                <select onchange="location = this.value;" class="appearance-none bg-transparent pl-0 pr-8 py-2 font-semibold text-right cursor-pointer focus:outline-none border-b border-transparent hover:border-black transition-colors">
                    <option value="@Url.Action("Index", new { sortOrder = "default" })">Sắp xếp: Mặc định</option>
                    <option value="@Url.Action("Index", new { sortOrder = "price_asc" })">Giá: Thấp đến Cao</option>
                    <option value="@Url.Action("Index", new { sortOrder = "price_desc" })">Giá: Cao đến Thấp</option>
                </select>
            </div>
        </div>

        @if (!Model.Products.Any())
        {
            <div class="py-20 text-center">
                <h3 class="text-2xl font-bold text-gray-300 mb-4">KHÔNG TÌM THẤY DỮ LIỆU</h3>
                <a asp-action="Index" class="text-blue-600 hover:underline">Quay lại trang chủ</a>
            </div>
        }
        else
        {
            <!-- GRID LAYOUT: Clean, Spacious -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-8 gap-y-12">
                @foreach (var product in Model.Products)
                {
                    <div class="group relative flex flex-col">
                        <!-- Image Container -->
                        <a asp-action="Details" asp-route-id="@product.ProductID" class="relative block aspect-[4/5] overflow-hidden bg-white rounded-2xl mb-4 shadow-sm hover:shadow-xl transition-all duration-500">
                            <!-- Label Badge -->
                            <span class="absolute top-4 left-4 bg-black text-white text-[10px] font-bold px-2 py-1 uppercase tracking-widest z-10">Mới</span>
                            
                            <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" 
                                 alt="@product.ProductName" 
                                 class="w-full h-full object-contain p-8 transition-transform duration-700 group-hover:scale-110" />
                            
                            <!-- Quick Action Overlay (No Icons) -->
                            @if (!User.Identity.IsAuthenticated || User.IsInRole("Customer"))
                            {
                                <div class="absolute bottom-0 left-0 right-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300 ease-out">
                                    <form asp-controller="Cart" asp-action="Add" method="post">
                                        <input type="hidden" name="productId" value="@product.ProductID" />
                                        <input type="hidden" name="quantity" value="1" />
                                        <button type="submit" class="w-full bg-black text-white font-bold py-3 rounded-xl hover:bg-gray-800 transition-colors text-sm uppercase tracking-wide">
                                            Thêm vào giỏ
                                        </button>
                                    </form>
                                </div>
                            }
                        </a>

                        <!-- Content -->
                        <div class="flex flex-col flex-grow">
                            <a asp-action="Details" asp-route-id="@product.ProductID" class="text-lg font-semibold text-black hover:text-blue-600 transition-colors mb-1 truncate">
                                @product.ProductName
                            </a>
                            
                            <div class="flex items-baseline gap-3 mt-1">
                                <span class="text-base font-medium text-[#1d1d1f]">@product.Price.ToString("N0") VNĐ</span>
                                <span class="text-sm text-gray-400 line-through">@((product.Price * 1.2m).ToString("N0")) VNĐ</span>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination: Minimal Text Only -->
            @if (Model.TotalPages > 1)
            {
                <div class="mt-20 border-t border-gray-200 pt-8 flex justify-between items-center text-sm font-medium">
                    <!-- Prev -->
                    @if (Model.CurrentPage > 1)
                    {
                        <a asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" class="text-black hover:text-blue-600 transition-colors">
                            QUAY LẠI
                        </a>
                    }
                    else
                    {
                        <span class="text-gray-300 cursor-not-allowed">QUAY LẠI</span>
                    }

                    <!-- Numbers -->
                    <div class="flex gap-4">
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                             if (i == 1 || i == Model.TotalPages || (i >= Model.CurrentPage - 1 && i <= Model.CurrentPage + 1))
                            {
                                <a asp-action="Index" asp-route-page="@i" 
                                   class="@(i == Model.CurrentPage ? "text-black border-b-2 border-black" : "text-gray-400 hover:text-black") px-1 pb-1 transition-colors">
                                    @i.ToString("D2")
                                </a>
                            }
                            else if (i == Model.CurrentPage - 2 || i == Model.CurrentPage + 2)
                            {
                                <span class="text-gray-300">...</span>
                            }
                        }
                    </div>

                    <!-- Next -->
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" class="text-black hover:text-blue-600 transition-colors">
                            TIẾP THEO
                        </a>
                    }
                    else
                    {
                        <span class="text-gray-300 cursor-not-allowed">TIẾP THEO</span>
                    }
                </div>
            }
        }
    </div>
</div>

<style>
    /* Ẩn thanh scroll mặc định nhưng vẫn scroll được */
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>

<script>
    function scrollToProducts() {
        document.getElementById('productList').scrollIntoView({ 
            behavior: 'smooth' 
        });
    }

    // Hiệu ứng Header khi cuộn
    window.addEventListener('scroll', function() {
        var nav = document.getElementById('categoryNav');
        if (window.scrollY > 50) {
            nav.classList.add('shadow-sm');
            nav.classList.replace('bg-[#F5F5F7]/90', 'bg-white/95');
        } else {
            nav.classList.remove('shadow-sm');
            nav.classList.replace('bg-white/95', 'bg-[#F5F5F7]/90');
        }
    });
</script>