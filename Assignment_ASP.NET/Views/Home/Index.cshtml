@model Assignment_ASP.NET.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Banner - Clean White -->
<div class="bg-white rounded-2xl border border-slate-200 p-12 mb-8">
    <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-4 leading-tight">
            Chào mừng đến với<br/>
            <span class="text-indigo-600">Web Bán Hàng</span>
        </h1>
        <p class="text-lg text-slate-600 mb-8 leading-relaxed">
            Sản phẩm chất lượng cao với giá cả hợp lý. Ưu đãi đặc biệt cho khách hàng mới!
        </p>
        <div class="flex flex-wrap gap-4">
            <a href="#products" class="px-8 py-3.5 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">
                <i class="bi bi-bag-check mr-2"></i>
                Mua sắm ngay
            </a>
            <a asp-controller="Home" asp-action="Promotions" class="px-8 py-3.5 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200">
                <i class="bi bi-gift mr-2"></i>
                Xem khuyến mãi
            </a>
        </div>
    </div>
</div>

<!-- Service Features - Clean Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-xl border border-slate-200 p-6 hover:shadow-md transition-shadow">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <i class="bi bi-truck text-blue-600 text-xl"></i>
        </div>
        <h3 class="font-semibold text-slate-900 mb-2">Freeship toàn quốc</h3>
        <p class="text-sm text-slate-600">Đơn từ 2.000.000 VNĐ</p>
    </div>
    
    <div class="bg-white rounded-xl border border-slate-200 p-6 hover:shadow-md transition-shadow">
        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
            <i class="bi bi-shield-check text-green-600 text-xl"></i>
        </div>
        <h3 class="font-semibold text-slate-900 mb-2">Bảo hành 12 tháng</h3>
        <p class="text-sm text-slate-600">Đổi trả trong 15 ngày</p>
    </div>
    
    <div class="bg-white rounded-xl border border-slate-200 p-6 hover:shadow-md transition-shadow">
        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
            <i class="bi bi-headset text-orange-600 text-xl"></i>
        </div>
        <h3 class="font-semibold text-slate-900 mb-2">Hỗ trợ 24/7</h3>
        <p class="text-sm text-slate-600">Kể cả ngày lễ</p>
    </div>
</div>

<!-- Main Content -->
<div class="grid grid-cols-1 lg:grid-cols-4 gap-6" id="products">
    
    <!-- Sidebar -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-xl border border-slate-200 p-5 sticky top-24">
            <h2 class="font-bold text-slate-900 mb-4 flex items-center text-sm">
                <i class="bi bi-tags text-indigo-600 mr-2"></i>
                DANH MỤC
            </h2>
            
            <div class="space-y-1">
                <a asp-action="Index"
                   asp-route-categoryId=""
                   asp-route-searchString="@Model.CurrentSearchString"
                   class="@(Model.CurrentCategoryId == null ? "bg-indigo-50 text-indigo-700 font-medium" : "text-slate-700 hover:bg-slate-50") block px-4 py-2.5 rounded-lg text-sm transition-colors">
                    <i class="bi bi-grid-3x3-gap mr-2"></i>
                    Tất cả sản phẩm
                </a>

                @foreach (var category in Model.Categories)
                {
                    <a asp-action="Index"
                       asp-route-categoryId="@category.CategoryID"
                       asp-route-searchString="@Model.CurrentSearchString"
                       class="@(Model.CurrentCategoryId == category.CategoryID ? "bg-indigo-50 text-indigo-700 font-medium" : "text-slate-700 hover:bg-slate-50") block px-4 py-2.5 rounded-lg text-sm transition-colors">
                        <i class="bi bi-tag mr-2"></i>
                        @category.CategoryName
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="lg:col-span-3">
        @if (!Model.Products.Any())
        {
            <div class="bg-white rounded-xl border border-slate-200 p-12 text-center">
                <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="bi bi-inbox text-slate-400 text-4xl"></i>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-2">Không tìm thấy sản phẩm</h3>
                <p class="text-slate-600 mb-6">Thử tìm kiếm với từ khóa khác</p>
                <a asp-action="Index" class="inline-block px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700">
                    Xem tất cả
                </a>
            </div>
        }
        else
        {
            <div class="grid grid-cols-2 md:grid-cols-3 gap-5">
                @foreach (var product in Model.Products)
                {
                    <div class="bg-white rounded-xl border border-slate-200 overflow-hidden hover:shadow-md transition-shadow group">
                        <!-- Image -->
                        <a asp-action="Details" asp-route-id="@product.ProductID" class="block relative aspect-square overflow-hidden bg-slate-100">
                            <img src="@(product.ImageUrl ?? "/images/placeholder.jpg")" 
                                 alt="@product.ProductName" 
                                 class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300" />
                        </a>

                        <!-- Info -->
                        <div class="p-4">
                            <a asp-action="Details" asp-route-id="@product.ProductID" 
                               class="block font-semibold text-slate-900 hover:text-indigo-600 mb-2 line-clamp-2 text-sm"
                               title="@product.ProductName">
                                @product.ProductName
                            </a>
                            
                            <div class="flex items-center justify-between">
                                <span class="text-lg font-bold text-indigo-600">
                                    @product.Price.ToString("N0")₫
                                </span>
                                <div class="flex items-center text-yellow-500 text-xs">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-half"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="p-3 pt-0">
                            @if (!User.Identity.IsAuthenticated || User.IsInRole("Customer"))
                            {
                                <form asp-controller="Cart" asp-action="Add" method="post">
                                    <input type="hidden" name="productId" value="@product.ProductID" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="w-full px-4 py-2.5 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 text-sm">
                                        <i class="bi bi-cart-plus mr-1.5"></i>
                                        Thêm vào giỏ
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>