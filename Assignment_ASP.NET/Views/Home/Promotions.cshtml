@model IEnumerable<Assignment_ASP.NET.Models.Coupon>

@{
    ViewData["Title"] = "Khuyến mãi đặc biệt";
}

<div class="max-w-6xl mx-auto">
    
    <!-- Header -->
    <div class="text-center mb-12">
        <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-pink-500 to-orange-500 rounded-2xl mb-6 shadow-lg">
            <i class="bi bi-gift text-white text-4xl"></i>
        </div>
        <h1 class="text-4xl font-bold text-slate-900 mb-4">Khuyến mãi đặc biệt</h1>
        <p class="text-lg text-slate-600 max-w-2xl mx-auto">
            Tận hưởng những ưu đãi tốt nhất! Sao chép mã và áp dụng ngay khi thanh toán.
        </p>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Coupons Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            @foreach (var coupon in Model)
            {
                <div class="bg-gradient-to-br from-white to-slate-50 rounded-2xl border-2 border-slate-200 p-6 hover:shadow-xl hover:border-indigo-300 transition-all relative overflow-hidden group">
                    
                    <!-- Decorative Background -->
                    <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-indigo-500/10 to-purple-500/10 rounded-full -mr-16 -mt-16 group-hover:scale-150 transition-transform duration-500"></div>
                    
                    <!-- Discount Badge -->
                    <div class="relative mb-4">
                        <div class="inline-flex items-baseline bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-xl shadow-lg">
                            <span class="text-5xl font-black">@coupon.DiscountPercentage</span>
                            <span class="text-2xl font-bold ml-1">%</span>
                        </div>
                        <p class="text-xs text-slate-500 mt-2 font-medium uppercase tracking-wide">Giảm giá</p>
                    </div>

                    <!-- Coupon Code -->
                    <div class="mb-6 relative">
                        <label class="text-xs font-semibold text-slate-600 uppercase tracking-wide mb-2 block">Mã khuyến mãi</label>
                        <div class="flex items-center space-x-2">
                            <div class="flex-1 bg-slate-100 border-2 border-dashed border-slate-300 rounded-lg px-4 py-3 font-mono font-bold text-lg text-indigo-600 text-center group-hover:bg-indigo-50 group-hover:border-indigo-400 transition-colors">
                                @coupon.Code
                            </div>
                            <button onclick="copyCode('@coupon.Code')" 
                                    class="p-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors" 
                                    title="Sao chép mã">
                                <i class="bi bi-clipboard text-lg"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Expiry Date -->
                    <div class="flex items-center justify-between text-sm pt-4 border-t border-slate-200">
                        <div class="flex items-center text-slate-600">
                            <i class="bi bi-calendar-event mr-2"></i>
                            <span class="font-medium">Hết hạn:</span>
                        </div>
                        <span class="font-bold text-slate-900">@coupon.ExpiryDate.ToString("dd/MM/yyyy")</span>
                    </div>
                </div>
            }
        </div>

        <!-- How to Use Section -->
        <div class="bg-gradient-to-br from-indigo-50 to-purple-50 rounded-2xl p-8 border border-indigo-100">
            <h2 class="text-2xl font-bold text-slate-900 mb-6 flex items-center">
                <i class="bi bi-info-circle text-indigo-600 mr-3"></i>
                Cách sử dụng mã giảm giá
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0 w-10 h-10 bg-indigo-600 text-white rounded-full flex items-center justify-center font-bold">1</div>
                    <div>
                        <h3 class="font-bold text-slate-900 mb-1">Thêm sản phẩm vào giỏ</h3>
                        <p class="text-sm text-slate-600">Chọn sản phẩm yêu thích và thêm vào giỏ hàng</p>
                    </div>
                </div>
                <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0 w-10 h-10 bg-purple-600 text-white rounded-full flex items-center justify-center font-bold">2</div>
                    <div>
                        <h3 class="font-bold text-slate-900 mb-1">Nhập mã giảm giá</h3>
                        <p class="text-sm text-slate-600">Sao chép mã và dán vào ô "Mã giảm giá" trong giỏ hàng</p>
                    </div>
                </div>
                <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0 w-10 h-10 bg-pink-600 text-white rounded-full flex items-center justify-center font-bold">3</div>
                    <div>
                        <h3 class="font-bold text-slate-900 mb-1">Hoàn tất thanh toán</h3>
                        <p class="text-sm text-slate-600">Giá đã được giảm, tiến hành thanh toán</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- No Promotions -->
        <div class="bg-white rounded-2xl p-16 text-center border border-slate-200">
            <div class="w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <i class="bi bi-gift text-slate-400 text-5xl"></i>
            </div>
            <h2 class="text-2xl font-bold text-slate-900 mb-3">Hiện không có khuyến mãi</h2>
            <p class="text-slate-600 mb-8">Các chương trình khuyến mãi sẽ được cập nhật sớm. Hãy quay lại sau nhé!</p>
            <a asp-controller="Home" asp-action="Index" 
               class="inline-block px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors">
                <i class="bi bi-arrow-left mr-2"></i>
                Quay về trang chủ
            </a>
        </div>
    }

    <!-- Back to Shopping -->
    <div class="text-center mt-12">
        <a asp-controller="Home" asp-action="Index" 
           class="inline-flex items-center px-8 py-4 bg-white text-slate-700 font-semibold rounded-xl border-2 border-slate-200 hover:border-indigo-300 hover:shadow-lg transition-all">
            <i class="bi bi-arrow-left mr-2"></i>
            Tiếp tục mua sắm
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function copyCode(code) {
            navigator.clipboard.writeText(code).then(function() {
                // Show success message
                alert('Đã sao chép mã: ' + code);
            }, function(err) {
                console.error('Không thể sao chép: ', err);
            });
        }
    </script>
}
