@model Assignment_ASP.NET.Models.Coupon

@{
    ViewData["Title"] = "Tạo mã giảm giá";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <a asp-action="Index" class="text-slate-600 hover:text-indigo-600 text-sm flex items-center mb-4">
            <i class="bi bi-arrow-left mr-2"></i>Quay lại danh sách
        </a>
        <h1 class="text-3xl font-bold text-slate-900">Tạo mã giảm giá mới</h1>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>
            
            <div class="mb-6">
                <label asp-for="Code" class="block text-sm font-medium text-slate-700 mb-2">Mã Code</label>
                <input asp-for="Code" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:border-indigo-500 uppercase" placeholder="VD: SALE50" />
                <span asp-validation-for="Code" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="DiscountPercentage" class="block text-sm font-medium text-slate-700 mb-2">Phần trăm giảm (%)</label>
                <input asp-for="DiscountPercentage" type="number" min="0" max="100" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:border-indigo-500" />
                <span asp-validation-for="DiscountPercentage" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="mb-6">
                <label asp-for="ExpiryDate" class="block text-sm font-medium text-slate-700 mb-2">Ngày hết hạn</label>
                <input asp-for="ExpiryDate" type="date" class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:outline-none focus:border-indigo-500" />
                <span asp-validation-for="ExpiryDate" class="text-red-500 text-xs mt-1"></span>
            </div>

            <div class="mb-8">
                <label class="flex items-center space-x-3">
                    <input class="form-checkbox h-5 w-5 text-indigo-600 rounded border-gray-300 focus:ring-indigo-500" asp-for="IsActive" />
                    <span class="text-slate-700 font-medium">Kích hoạt ngay</span>
                </label>
            </div>

            <div class="flex items-center space-x-4">
                <button type="submit" class="px-6 py-2.5 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 transition-colors">
                    <i class="bi bi-check-lg mr-2"></i>Tạo mới
                </button>
                <a asp-action="Index" class="px-6 py-2.5 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200 transition-colors">
                    Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
