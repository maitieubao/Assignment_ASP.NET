@model IEnumerable<Assignment_ASP.NET.Models.Coupon>

@{
    ViewData["Title"] = "Quản lý mã giảm giá";
}

<div class="max-w-6xl mx-auto">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-bold text-slate-900">
            <i class="bi bi-ticket-perforated text-indigo-600 mr-2"></i>Quản lý mã giảm giá
        </h1>
        <a asp-action="Create" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-medium transition-colors">
            <i class="bi bi-plus-lg mr-2"></i>Thêm mới
        </a>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-slate-50 border-b border-slate-200 text-xs uppercase text-slate-500 font-semibold">
                        <th class="px-6 py-4">Mã Code</th>
                        <th class="px-6 py-4">Giảm giá (%)</th>
                        <th class="px-6 py-4">Hạn sử dụng</th>
                        <th class="px-6 py-4">Trạng thái</th>
                        <th class="px-6 py-4 text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-200">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 font-medium text-slate-900">@item.Code</td>
                            <td class="px-6 py-4 text-slate-600">@item.DiscountPercentage%</td>
                            <td class="px-6 py-4 text-slate-600">@item.ExpiryDate.ToString("dd/MM/yyyy")</td>
                            <td class="px-6 py-4">
                                @if (item.IsActive && item.ExpiryDate >= DateTime.Now)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                        Hết hạn / Vô hiệu
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 text-right space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.CouponID" class="text-indigo-600 hover:text-indigo-900 font-medium text-sm">Sửa</a>
                                <span class="text-slate-300">|</span>
                                <a asp-action="Delete" asp-route-id="@item.CouponID" class="text-red-600 hover:text-red-900 font-medium text-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
