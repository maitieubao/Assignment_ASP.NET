@model Assignment_ASP.NET.Models.Coupon

@{
    ViewData["Title"] = "Xóa mã giảm giá";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <a asp-action="Index" class="text-slate-600 hover:text-indigo-600 text-sm flex items-center mb-4">
            <i class="bi bi-arrow-left mr-2"></i>Quay lại danh sách
        </a>
        <h1 class="text-3xl font-bold text-slate-900">Xóa mã giảm giá</h1>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8">
        <div class="mb-6 text-center">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-exclamation-triangle text-red-600 text-2xl"></i>
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Bạn có chắc chắn muốn xóa?</h3>
            <p class="text-slate-600">Hành động này không thể hoàn tác.</p>
        </div>

        <div class="bg-slate-50 rounded-lg p-6 mb-8 border border-slate-200">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-slate-500">Mã Code</dt>
                    <dd class="mt-1 text-sm text-slate-900 font-semibold">@Model.Code</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-slate-500">Giảm giá</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Model.DiscountPercentage%</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-slate-500">Hạn sử dụng</dt>
                    <dd class="mt-1 text-sm text-slate-900">@Model.ExpiryDate.ToString("dd/MM/yyyy")</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-slate-500">Trạng thái</dt>
                    <dd class="mt-1 text-sm text-slate-900">
                        @(Model.IsActive ? "Đang hoạt động" : "Vô hiệu hóa")
                    </dd>
                </div>
            </dl>
        </div>

        <form asp-action="Delete" class="flex items-center justify-center space-x-4">
            <input type="hidden" asp-for="CouponID" />
            <button type="submit" class="px-6 py-2.5 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 transition-colors">
                <i class="bi bi-trash mr-2"></i>Xác nhận xóa
            </button>
            <a asp-action="Index" class="px-6 py-2.5 bg-slate-100 text-slate-700 font-semibold rounded-lg hover:bg-slate-200 transition-colors">
                Hủy bỏ
            </a>
        </form>
    </div>
</div>
