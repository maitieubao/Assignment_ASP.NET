@model Assignment_ASP.NET.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="max-w-3xl mx-auto">
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800 flex items-center">
            <i class="bi bi-check-circle mr-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="bg-white rounded-xl border border-slate-200 overflow-hidden">
        
        <!-- Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 p-8 text-white">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center text-3xl font-bold">
                        @Model.FullName.Substring(0, 1).ToUpper()
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold">@Model.FullName</h1>
                        <p class="text-indigo-100 text-sm">@@@Model.Username</p>
                        <div class="mt-1">
                            <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-xs font-semibold">
                                @Model.Role?.RoleName
                            </span>
                        </div>
                    </div>
                </div>
                <a asp-action="EditProfile" 
                   class="px-6 py-3 bg-white text-indigo-600 font-semibold rounded-lg hover:bg-indigo-50">
                    <i class="bi bi-pencil mr-2"></i>Chỉnh sửa
                </a>
            </div>
        </div>

        <!-- Info Grid -->
        <div class="p-8">
            <h2 class="text-lg font-bold text-slate-900 mb-6">Thông tin chi tiết</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                
                <!-- Username -->
                <div class="border-l-4 border-indigo-600 pl-4">
                    <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Tên đăng nhập</p>
                    <p class="text-slate-900 font-semibold">@Model.Username</p>
                </div>

                <!-- Full Name -->
                <div class="border-l-4 border-purple-600 pl-4">
                    <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Họ và tên</p>
                    <p class="text-slate-900 font-semibold">@Model.FullName</p>
                </div>

                <!-- Email -->
                <div class="border-l-4 border-blue-600 pl-4">
                    <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Email</p>
                    <p class="text-slate-900 font-semibold">
                        <i class="bi bi-envelope mr-2 text-slate-400"></i>
                        @Model.Email
                    </p>
                </div>

                <!-- Phone -->
                <div class="border-l-4 border-green-600 pl-4">
                    <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Số điện thoại</p>
                    <p class="text-slate-900 font-semibold">
                        <i class="bi bi-telephone mr-2 text-slate-400"></i>
                        @(Model.Phone ?? "Chưa cập nhật")
                    </p>
                </div>

                <!-- Role -->
                <div class="border-l-4 border-orange-600 pl-4">
                    <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Vai trò</p>
                    <p class="text-slate-900 font-semibold">
                        <i class="bi bi-shield-check mr-2 text-slate-400"></i>
                        @Model.Role?.RoleName
                    </p>
                </div>

                <!-- User ID -->
                <div class="border-l-4 border-slate-600 pl-4">
                    <p class="text-xs font-semibold text-slate-500 uppercase mb-1">ID người dùng</p>
                    <p class="text-slate-900 font-semibold">
                        <i class="bi bi-hash mr-2 text-slate-400"></i>
                        @Model.UserID
                    </p>
                </div>

                <!-- Address -->
                <div class="md:col-span-2 border-l-4 border-pink-600 pl-4">
                    <p class="text-xs font-semibold text-slate-500 uppercase mb-1">Địa chỉ</p>
                    <p class="text-slate-900 font-semibold">
                        <i class="bi bi-geo-alt mr-2 text-slate-400"></i>
                        @(Model.Address ?? "Chưa cập nhật")
                    </p>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="bg-slate-50 px-8 py-4 border-t border-slate-100 flex items-center justify-between">
            <div class="text-sm text-slate-600">
                <i class="bi bi-info-circle mr-1"></i>
                Bạn có thể cập nhật thông tin cá nhân bất cứ lúc nào
            </div>
            <div class="flex items-center space-x-3">
                @if (User.IsInRole("Customer"))
                {
                    <a asp-action="OrderHistory" 
                       class="px-4 py-2 text-sm font-medium text-indigo-600 bg-white border border-indigo-200 rounded-lg hover:bg-indigo-50">
                        <i class="bi bi-clock-history mr-1"></i>Lịch sử mua
                    </a>
                }
                <a asp-action="EditProfile" 
                   class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700">
                    <i class="bi bi-pencil mr-1"></i>Chỉnh sửa
                </a>
            </div>
        </div>
    </div>
</div>
