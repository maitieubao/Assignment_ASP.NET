@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="min-h-[70vh] flex items-center justify-center py-12">
    <div class="max-w-md w-full">
        
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-indigo-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-person-lock text-indigo-600 text-3xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-slate-900 mb-2">Đăng nhập</h1>
            <p class="text-slate-600 text-sm">Chào mừng bạn trở lại!</p>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 p-8">
            <form method="post" asp-action="Login">
                @Html.AntiForgeryToken()
                
                <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl text-red-600 text-sm"></div>

                <div class="mb-5">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">
                        Tên đăng nhập
                    </label>
                    <input type="text" 
                           name="username" 
                           required
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                           placeholder="Nhập tên đăng nhập" />
                </div>

                <div class="mb-5">
                    <label class="block text-sm font-semibold text-slate-700 mb-2">
                        Mật khẩu
                    </label>
                    <input type="password" 
                           name="password" 
                           required
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                           placeholder="Nhập mật khẩu" />
                </div>

                <div class="flex items-center justify-between mb-6 text-sm">
                    <label class="flex items-center text-slate-600">
                        <input type="checkbox" class="w-4 h-4 text-indigo-600 rounded mr-2">
                        Ghi nhớ
                    </label>
                    <a href="#" class="text-indigo-600 hover:text-indigo-700 font-medium">
                        Quên mật khẩu?
                    </a>
                </div>

                <button type="submit" 
                        class="w-full py-3.5 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">
                    Đăng nhập
                </button>
            </form>
        </div>

        <div class="text-center mt-6 text-sm">
            <p class="text-slate-600">
                Chưa có tài khoản? 
                <a asp-action="Register" class="text-indigo-600 hover:text-indigo-700 font-semibold">
                    Đăng ký ngay
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}