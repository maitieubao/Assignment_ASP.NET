@model Assignment_ASP.NET.Models.User
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="min-h-[70vh] flex items-center justify-center py-12">
    <div class="max-w-2xl w-full">
        
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-indigo-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <i class="bi bi-person-plus text-indigo-600 text-3xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-slate-900 mb-2">Đăng ký tài khoản</h1>
            <p class="text-slate-600 text-sm">Tham gia ngay hôm nay!</p>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 p-8">
            <form method="post" asp-action="Register">
                @Html.AntiForgeryToken()
                
                <div asp-validation-summary="ModelOnly" class="mb-6 p-4 bg-red-50 border border-red-200 rounded-xl text-red-600 text-sm"></div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                    
                    <div>
                        <label asp-for="Username" class="block text-sm font-semibold text-slate-700 mb-2">
                            Tên đăng nhập
                        </label>
                        <input asp-for="Username" 
                               class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                               placeholder="Nhập tên đăng nhập" />
                        <span asp-validation-for="Username" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="FullName" class="block text-sm font-semibold text-slate-700 mb-2">
                            Họ và tên
                        </label>
                        <input asp-for="FullName" 
                               class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                               placeholder="Nhập họ và tên" />
                        <span asp-validation-for="FullName" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-semibold text-slate-700 mb-2">
                            Email
                        </label>
                        <input asp-for="Email" type="email"
                               class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                               placeholder="example@email.com" />
                        <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Phone" class="block text-sm font-semibold text-slate-700 mb-2">
                            Số điện thoại
                        </label>
                        <input asp-for="Phone" type="tel"
                               class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                               placeholder="0123456789" />
                        <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div class="md:col-span-2">
                        <label asp-for="Address" class="block text-sm font-semibold text-slate-700 mb-2">
                            Địa chỉ
                        </label>
                        <input asp-for="Address"
                               class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                               placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="Address" class="text-red-500 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Mật khẩu
                        </label>
                        <input type="password" 
                               name="password"
                               class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                               placeholder="Nhập mật khẩu" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">
                            Xác nhận mật khẩu
                        </label>
                        <input type="password" 
                               name="confirmPassword"
                               class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:outline-none focus:border-indigo-500 focus:bg-white text-sm"
                               placeholder="Nhập lại mật khẩu" />
                    </div>
                </div>

                <div class="mt-6">
                    <label class="flex items-start text-sm text-slate-600">
                        <input type="checkbox" required class="w-4 h-4 text-indigo-600 rounded mr-2 mt-0.5">
                        <span>
                            Tôi đồng ý với 
                            <a href="#" class="text-indigo-600 hover:text-indigo-700 font-medium">Điều khoản</a> 
                            và 
                            <a href="#" class="text-indigo-600 hover:text-indigo-700 font-medium">Chính sách</a>
                        </span>
                    </label>
                </div>

                <button type="submit" 
                        class="w-full mt-6 py-3.5 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700">
                    Đăng ký
                </button>
            </form>
        </div>

        <div class="text-center mt-6 text-sm">
            <p class="text-slate-600">
                Đã có tài khoản? 
                <a asp-action="Login" class="text-indigo-600 hover:text-indigo-700 font-semibold">
                    Đăng nhập
                </a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}